@model PicklePlay.Models.ViewModels.PlayerMatchHistoryViewModel
@using PicklePlay.Models

@{
    ViewData["Title"] = $"{Model.Username}'s Match History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">


    <!-- Player Stats Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-auto">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="@Model.Username" 
                             class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            @Model.Username!.Substring(0, 1).ToUpper()
                        </div>
                    }
                </div>
                <div class="col">
                    <h2 class="mb-1">@Model.Username</h2>
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge bg-@(Model.CurrentStatus == "Reliable" ? "success" : Model.CurrentStatus == "Provisional" ? "warning" : "secondary") fs-6">
                            @Model.CurrentStatus
                        </span>
                        <h3 class="mb-0 text-primary">@Model.CurrentRating</h3>
                    </div>
                </div>
                <div class="col-auto text-end">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Matches</div>
                            <div class="fs-4 fw-bold">@Model.TotalMatches</div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Wins</div>
                            <div class="fs-4 fw-bold text-success">@Model.Wins</div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Losses</div>
                            <div class="fs-4 fw-bold text-danger">@Model.Losses</div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Win Rate</div>
                            <div class="fs-4 fw-bold">@Model.WinRate.ToString("F1")%</div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-@(Model.ReliabilityScore >= 80 ? "success" : Model.ReliabilityScore >= 60 ? "info" : Model.ReliabilityScore >= 40 ? "warning" : "danger")"
                                 style="width: @Model.ReliabilityScore%">
                                <strong>@Model.ReliabilityScore.ToString("F0")% Reliability</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Match History -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Match History 
                    <span class="badge bg-light text-primary">@Model.TotalMatches total</span>
                </h5>
                @if (Model.IsOwnProfile)
                {
                    <a href="/Rank/Leaderboard" class="btn btn-sm btn-light">
                        <i class="bi bi-trophy me-1"></i>View Leaderboard
                    </a>
                }
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.MatchHistory.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Competition</th> @* ⬅️ NEW COLUMN *@
                                <th>Format</th>
                                <th>Result</th>
                                <th>Score</th>
                                <th>Partner</th>
                                <th>Opponents</th>
                                <th>Rating Change</th>
                                <th class="text-end">Rating After</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var match in Model.MatchHistory)
                            {
                                <tr class="@(match.IsWin ? "table-success-subtle" : "table-danger-subtle")">
                                    <td>
                                        <div class="small">@match.FormattedDate</div>
                                        <div class="text-muted" style="font-size: 0.8rem;">@match.FormattedTime</div>
                                    </td>
                                    @* ⬇️ NEW: Competition column *@
                                    <td>
                                       <a href="/Competition/CompDetails/@match.CompetitionId" 
                                           class="text-decoration-none">
                                            <i class="bi bi-trophy me-1"></i>
                                            <span class="text-primary">@match.CompetitionTitle</span>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(match.Format == MatchFormat.Singles ? "info" : "primary")">
                                            <i class="bi bi-@(match.Format == MatchFormat.Singles ? "person" : "people") me-1"></i>
                                            @match.Format
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@match.OutcomeBadge">
                                            <i class="bi bi-@(match.IsWin ? "trophy" : "x-circle") me-1"></i>
                                            @match.OutcomeDisplay
                                        </span>
                                    </td>
                                    <td>
                                        <strong class="@(match.IsWin ? "text-success" : "text-danger")">
                                            @match.ScoreDisplay
                                        </strong>
                                    </td>
<td>
    @if (!string.IsNullOrEmpty(match.PartnerName))
    {
        <a href="javascript:void(0)" 
           onclick="showUserProfilePreview(@match.PartnerId)"
           class="text-decoration-none cursor-pointer">
            <i class="bi bi-person-plus me-1"></i>@match.PartnerName
        </a>
    }
    else if (match.Format == MatchFormat.Singles)
    {
        <span class="text-muted">-</span>
    }
    else
    {
        <span class="text-muted">Unknown</span>
    }
</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            @foreach (var opponent in match.OpponentNames)
                                            {
                                                <small class="text-muted">
                                                    <i class="bi bi-shield-x me-1"></i>@opponent
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(match.RatingChange >= 0 ? "success" : "danger") fs-6">
                                            @(match.RatingChange >= 0 ? "+" : "")@match.RatingChange.ToString("F3")
                                        </span>
                                        <div class="small text-muted">K: @match.KFactorUsed.ToString("F2")</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="fw-bold">@match.RatingAfter.ToString("F3")</div>
                                        <div class="small text-muted">from @match.RatingBefore.ToString("F3")</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* ⬇️ PAGINATION *@
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-light">
                        <nav>
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?userId=@Model.UserId&page=@(Model.CurrentPage - 1)">
                                        <i class="bi bi-chevron-left"></i> Previous
                                    </a>
                                </li>
                                
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?userId=@Model.UserId&page=@i">@i</a>
                                    </li>
                                }
                                
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?userId=@Model.UserId&page=@(Model.CurrentPage + 1)">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div class="text-center text-muted small mt-2">
                            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - 
                            @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalMatches) 
                            of @Model.TotalMatches matches
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3 text-muted">No Match History</h5>
                    <p class="text-muted">This player hasn't played any RANK matches yet.</p>
                </div>
            }
        </div>
    </div>

    <!-- Rating Progress Chart -->
    @if (Model.MatchHistory.Any())
    {
        <div class="card mt-4 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-graph-up me-2"></i>Rating Progress (Last @Model.MatchHistory.Count Matches)
                </h5>
            </div>
            <div class="card-body">
                <canvas id="ratingChart" height="80"></canvas>
            </div>
        </div>
    }
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Rating Progress Chart
    const matchHistory = @Html.Raw(Json.Serialize(Model.MatchHistory.Select(m => new {
        date = m.MatchDate.ToString("MMM dd"),
        rating = m.RatingAfter,
        change = m.RatingChange
    }).Reverse()));

    if (matchHistory.length > 0) {
        const ctx = document.getElementById('ratingChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: matchHistory.map(m => m.date),
                datasets: [{
                    label: 'Rating',
                    data: matchHistory.map(m => m.rating),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    tension: 0.1,
                    fill: true,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const index = context.dataIndex;
                                const change = matchHistory[index].change;
                                return `Rating: ${context.parsed.y.toFixed(3)} (${change >= 0 ? '+' : ''}${change.toFixed(3)})`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        ticks: {
                            callback: function(value) {
                                return value.toFixed(3);
                            }
                        }
                    }
                }
            }
        });
    }
</script>
}

@section Styles {
<style>
    .table-success-subtle {
        background-color: rgba(25, 135, 84, 0.05);
    }
    .table-danger-subtle {
        background-color: rgba(220, 53, 69, 0.05);
    }
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.075);
    }
    .page-link {
        color: #667eea;
    }
    .page-item.active .page-link {
        background-color: #667eea;
        border-color: #667eea;
    }
        .cursor-pointer {
        cursor: pointer;
    }
    .cursor-pointer:hover {
        opacity: 0.8;
    }
</style>
}