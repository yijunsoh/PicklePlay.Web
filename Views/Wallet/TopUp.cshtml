@{
    ViewData["Title"] = "Top Up Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --secondary: #FF6B35;
            --accent: #1E5B32;
            --light: #F8F9FA;
            --dark: #343A40;
            --court: #E8F5E9;
        }
        
        .topup-page {
            background: #E8F5E9;
            min-height: calc(100vh - 80px);
        }

        .side-box {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .side-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .wallet-balance {
            font-size: 2.2rem;
            font-weight: bold;
            color: #2E8B57;
        }

        .quick-amount-btn {
            margin: 5px;
            transition: all 0.2s;
            border-radius: 50px;
            font-weight: 600;
            padding: 10px 20px;
            border: 2px solid #2E8B57;
            color: #2E8B57;
            background: transparent;
        }

        .quick-amount-btn:hover, .quick-amount-btn.active {
            background: #2E8B57;
            color: white;
            transform: scale(1.05);
        }

        .stats-card {
            text-align: center;
            padding: 20px 15px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .stats-card i {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #2E8B57;
        }

        .stats-card h4 {
            font-weight: 700;
            color: #343A40;
            margin-bottom: 5px;
            font-size: 1.4rem;
        }

        .stats-card p {
            color: #6c757d;
            margin: 0;
            font-weight: 500;
        }

        .page-header {
            background: #2E8B57;
            color: white;
            padding: 30px 0;
            border-radius: 0 0 20px 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .section-title {
            color: #2E8B57;
            font-weight: 700;
            border-bottom: 2px solid #2E8B57;
            padding-bottom: 10px;
            margin-bottom: 20px;
            display: inline-block;
            font-size: 1.4rem;
        }

        .btn-custom {
            background: #2E8B57;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-custom:hover {
            background: #1E5B32;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .btn-outline-custom {
            border: 2px solid #2E8B57;
            color: #2E8B57;
            border-radius: 50px;
            padding: 10px 24px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-outline-custom:hover {
            background: #2E8B57;
            color: white;
            transform: translateY(-2px);
        }

        .payment-method {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .payment-method:hover, .payment-method.selected {
            border-color: #2E8B57;
            background: rgba(46, 139, 87, 0.05);
        }

        .payment-method i {
            font-size: 2rem;
            color: #2E8B57;
            margin-bottom: 10px;
        }

        .amount-input-group {
            position: relative;
        }

        .amount-input-group:before {
            content: "RM";
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            color: #2E8B57;
            z-index: 5;
        }

        .amount-input-group input {
            padding-left: 50px;
            border-radius: 50px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .amount-input-group input:focus {
            border-color: #2E8B57;
            box-shadow: 0 0 0 0.2rem rgba(46, 139, 87, 0.25);
        }

        .court-pattern {
            position: relative;
            overflow: hidden;
        }

        .court-pattern::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                linear-gradient(90deg, transparent 49%, rgba(255,255,255,0.1) 49%, rgba(255,255,255,0.1) 51%, transparent 51%),
                linear-gradient(0deg, transparent 49%, rgba(255,255,255,0.1) 49%, rgba(255,255,255,0.1) 51%, transparent 51%);
            background-size: 60px 60px;
            pointer-events: none;
            z-index: 0;
        }

        .court-pattern > * {
            position: relative;
            z-index: 1;
        }

        .card-details {
            display: none;
            margin-top: 15px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 12px;
            border-left: 4px solid #2E8B57;
        }

        /* Modal Styles */
        .modal-success {
            color: #2E8B57;
        }

        .modal-error {
            color: #dc3545;
        }

        .modal-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }
    </style>
}

<div class="topup-page court-pattern">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-plus-circle me-3"></i>Top Up Wallet</h1>
                    <p class="lead mb-0">Add funds to your wallet using secure payment methods</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/Wallet/WalletManagement" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Wallet
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Left Column - Payment Form -->
            <div class="col-lg-6">
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-credit-card me-2"></i>Payment Details</h3>
                    
                    <!-- Amount Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Select Amount</label>
                        <div class="d-flex flex-wrap mb-3">
                            <button type="button" class="btn quick-amount-btn" data-amount="10">RM 10</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="20">RM 20</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="50">RM 50</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="100">RM 100</button>
                        </div>
                        <div class="amount-input-group">
                            <input type="number" id="customAmount" class="form-control form-control-lg" 
                                   placeholder="Enter custom amount" min="1" step="0.01">
                        </div>
                    </div>

                    <!-- Payment Method -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Payment Method</label>
                        <div class="payment-method" data-method="PayPal">
                            <div class="text-center">
                                <i class="fab fa-paypal"></i>
                                <h5>PayPal</h5>
                                <p class="text-muted mb-0">Pay with your PayPal account</p>
                            </div>
                        </div>
                        <div class="payment-method" data-method="CreditCard">
                            <div class="text-center">
                                <i class="fas fa-credit-card"></i>
                                <h5>Credit Card</h5>
                                <p class="text-muted mb-0">Secure credit card payment</p>
                            </div>
                        </div>
                        <div class="payment-method" data-method="DebitCard">
                            <div class="text-center">
                                <i class="fas fa-credit-card"></i>
                                <h5>Debit Card</h5>
                                <p class="text-muted mb-0">Secure debit card payment</p>
                            </div>
                        </div>
                    </div>

                    <!-- Card Details (shown only for card payments) -->
                    <div id="cardDetails" class="card-details">
                        <h5 class="mb-3">Card Details</h5>
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Card Number</label>
                                <input type="text" id="cardNumber" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Month</label>
                                <input type="text" id="expiryMonth" class="form-control" placeholder="MM" maxlength="2">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Year</label>
                                <input type="text" id="expiryYear" class="form-control" placeholder="YYYY" maxlength="4">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">CVV</label>
                                <input type="text" id="cvv" class="form-control" placeholder="123" maxlength="4">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Card Holder Name</label>
                                <input type="text" id="cardHolderName" class="form-control" placeholder="John Doe">
                            </div>
                        </div>
                    </div>

                    <!-- Payment Section -->
                    <div class="payment-section">
                        <button id="topUpBtn" class="btn btn-secondary w-100 py-3" disabled>
                            <i class="fas fa-plus-circle me-2"></i>Top Up Now
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Column - Wallet Info -->
            <div class="col-lg-6">
                <!-- Wallet Summary -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-wallet me-2"></i>Wallet Summary</h3>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="stats-card">
                                <i class="fas fa-wallet"></i>
                                <h4 class="wallet-balance">RM @ViewData["CurrentBalance"]</h4>
                                <p>Current Balance</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <h5><i class="fas fa-info-circle me-2"></i>Top Up Information</h5>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success me-2"></i>Instant processing</li>
                            <li><i class="fas fa-check text-success me-2"></i>Secure payment</li>
                            <li><i class="fas fa-check text-success me-2"></i>No hidden fees</li>
                            <li><i class="fas fa-check text-success me-2"></i>24/7 support</li>
                        </ul>
                    </div>
                </div>

                <!-- Recent Top Ups -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-history me-2"></i>Recent Top Ups</h3>
                    <div class="recent-activity">
                        <div class="activity-item">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <i class="fas fa-plus-circle text-success me-2"></i>
                                    <span>Top Up</span>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-success">+ RM 100.00</div>
                                    <small class="text-muted">2 days ago</small>
                                </div>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <i class="fas fa-plus-circle text-success me-2"></i>
                                    <span>Top Up</span>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-success">+ RM 50.00</div>
                                    <small class="text-muted">1 week ago</small>
                                </div>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <i class="fas fa-plus-circle text-success me-2"></i>
                                    <span>Top Up</span>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-success">+ RM 200.00</div>
                                    <small class="text-muted">2 weeks ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="modal-success">
                    <i class="fas fa-check-circle modal-icon"></i>
                    <h3>Top Up Successful!</h3>
                    <p class="lead">Your wallet has been topped up with RM <span id="modalSuccessAmount">0.00</span></p>
                    <p>New Balance: RM <span id="modalNewBalance">0.00</span></p>
                </div>
                <div class="mt-4">
                    <button type="button" class="btn btn-custom" data-bs-dismiss="modal">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="modal-error">
                    <i class="fas fa-times-circle modal-icon"></i>
                    <h3>Top Up Failed</h3>
                    <p id="modalErrorMessage" class="lead">An error occurred. Please try again.</p>
                </div>
                <div class="mt-4">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Try Again</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedAmount = 0;
        let selectedPaymentMethod = '';

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap modals
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));
            const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));

            // Load wallet balance and transactions
            loadWalletBalance();
            loadRecentTransactions();

            // Quick amount buttons
            document.querySelectorAll('.quick-amount-btn').forEach(button => {
                button.addEventListener('click', function() {
                    selectedAmount = parseFloat(this.getAttribute('data-amount'));
                    document.getElementById('customAmount').value = selectedAmount;
                    
                    document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    updateTopUpButton();
                });
            });

            // Custom amount input
            document.getElementById('customAmount').addEventListener('input', function() {
                selectedAmount = parseFloat(this.value) || 0;
                document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                updateTopUpButton();
            });

            // Payment method selection
            document.querySelectorAll('.payment-method').forEach(method => {
                method.addEventListener('click', function() {
                    selectedPaymentMethod = this.getAttribute('data-method');
                    document.querySelectorAll('.payment-method').forEach(m => {
                        m.classList.remove('selected');
                    });
                    this.classList.add('selected');
                    
                    // Show/hide card details based on selection
                    const cardDetails = document.getElementById('cardDetails');
                    if (selectedPaymentMethod === 'CreditCard' || selectedPaymentMethod === 'DebitCard') {
                        cardDetails.style.display = 'block';
                    } else {
                        cardDetails.style.display = 'none';
                    }
                    
                    updateTopUpButton();
                });
            });

            // Card input formatting
            document.getElementById('cardNumber')?.addEventListener('input', function() {
                formatCardNumber(this);
            });
            
            document.getElementById('expiryMonth')?.addEventListener('input', function() {
                formatExpiryMonth(this);
            });
            
            document.getElementById('expiryYear')?.addEventListener('input', function() {
                formatExpiryYear(this);
            });
            
            document.getElementById('cvv')?.addEventListener('input', function() {
                formatCVV(this);
            });

            // Top Up button handler
            document.getElementById('topUpBtn').addEventListener('click', async function() {
                if (!selectedAmount || selectedAmount <= 0) {
                    showError('Please enter a valid amount');
                    return;
                }
                if (!selectedPaymentMethod) {
                    showError('Please select a payment method');
                    return;
                }

                // Show processing state
                const originalText = this.innerHTML;
                this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                this.disabled = true;

                try {
                    if (selectedPaymentMethod === 'PayPal') {
                        await processPayPalPayment(selectedAmount);
                        // Page will redirect, no need to reset button
                    } else {
                        await processCardPayment(selectedAmount, selectedPaymentMethod);
                        // Reset button after successful card payment
                        resetTopUpButton(originalText);
                    }
                } catch (error) {
                    console.error('Payment Error:', error);
                    showError(error.message || 'An error occurred. Please try again.');
                    // Reset button on error
                    resetTopUpButton(originalText);
                }
            });

            // Initial setup
            updateTopUpButton();
        });

        // Load recent transactions from API
        async function loadRecentTransactions() {
            try {
                const response = await fetch('/api/wallet/transactions');
                const result = await response.json();
                
                if (result.success) {
                    displayRecentTransactions(result.transactions);
                }
            } catch (error) {
                console.error('Failed to load transactions:', error);
                // Keep the default placeholder transactions if API fails
            }
        }

        // Display recent transactions in the UI
        function displayRecentTransactions(transactions) {
            const container = document.querySelector('.recent-activity');
            if (!container) return;

            if (!transactions || transactions.length === 0) {
                container.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-receipt fa-2x mb-2"></i>
                        <p>No recent transactions</p>
                    </div>
                `;
                return;
            }

            // Filter only top-up transactions and take last 3
            const topUpTransactions = transactions
                .filter(t => t.isTopUp && t.status === 'Completed')
                .slice(0, 5);

            if (topUpTransactions.length === 0) {
                container.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-receipt fa-2x mb-2"></i>
                        <p>No recent top-ups</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = topUpTransactions.map(transaction => `
                <div class="activity-item mb-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <i class="fas fa-plus-circle text-success me-2"></i>
                            <span>Top Up - ${transaction.method}</span>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold text-success">+ RM ${transaction.amount.toFixed(2)}</div>
                            <small class="text-muted">${transaction.formattedDate}</small>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // PayPal payment function
        async function processPayPalPayment(amount) {
            const response = await fetch('/api/wallet/paypal/create-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    amount: amount
                })
            });

            const result = await response.json();
            
            if (result.success) {
                // Store amount in localStorage as backup (in case session fails)
                localStorage.setItem('paypalAmount', amount);
                
                // Redirect to PayPal
                window.location.href = result.approvalUrl;
            } else {
                throw new Error(result.message || 'Failed to create PayPal payment');
            }
        }

        // Card payment function
        async function processCardPayment(amount, paymentMethod) {
            // Validate card details for card payments
            if (selectedPaymentMethod === 'CreditCard' || selectedPaymentMethod === 'DebitCard') {
                const cardNumber = document.getElementById('cardNumber').value;
                const expiryMonth = document.getElementById('expiryMonth').value;
                const expiryYear = document.getElementById('expiryYear').value;
                const cvv = document.getElementById('cvv').value;
                const cardHolderName = document.getElementById('cardHolderName').value;

                if (!cardNumber || !expiryMonth || !expiryYear || !cvv || !cardHolderName) {
                    throw new Error('Please fill in all card details');
                }

                // Enhanced validation
                if (!validateCardNumber(cardNumber)) {
                    throw new Error('Please enter a valid card number');
                }
                
                if (!validateExpiry(expiryMonth, expiryYear)) {
                    throw new Error('Please check card expiry date');
                }
                
                if (!validateCVV(cvv)) {
                    throw new Error('Please enter a valid CVV');
                }
                
                if (cardHolderName.trim().length < 2) {
                    throw new Error('Please enter cardholder name');
                }
            }

            const cardInfo = {
                cardNumber: document.getElementById('cardNumber').value,
                expiryMonth: document.getElementById('expiryMonth').value,
                expiryYear: document.getElementById('expiryYear').value,
                cvv: document.getElementById('cvv').value,
                cardHolderName: document.getElementById('cardHolderName').value
            };

            const response = await fetch('/api/wallet/topup', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    amount: amount,
                    paymentMethod: paymentMethod,
                    cardInfo: cardInfo
                })
            });

            const result = await response.json();

            if (result.success) {
                // Show success modal
                showSuccess(result.newBalance);
                // Reload transactions to show the new one
                loadRecentTransactions();
                // Clear form
                clearCardForm();
            } else {
                throw new Error(result.message);
            }
        }

        // Validation functions
        function validateCardNumber(cardNumber) {
            const cleanNumber = cardNumber.replace(/\s/g, '');
            return cleanNumber.length >= 13 && cleanNumber.length <= 19 && /^\d+$/.test(cleanNumber);
        }

        function validateExpiry(month, year) {
            const currentYear = new Date().getFullYear();
            const currentMonth = new Date().getMonth() + 1;
            
            const expMonth = parseInt(month);
            const expYear = parseInt(year);
            
            if (expYear < currentYear) return false;
            if (expYear === currentYear && expMonth < currentMonth) return false;
            if (expMonth < 1 || expMonth > 12) return false;
            
            return true;
        }

        function validateCVV(cvv) {
            return cvv.length >= 3 && cvv.length <= 4 && /^\d+$/.test(cvv);
        }

        // Input formatting functions
        function formatCardNumber(input) {
            let value = input.value.replace(/\D/g, '');
            value = value.replace(/(\d{4})/g, '$1 ').trim();
            input.value = value.substring(0, 19);
        }

        function formatExpiryMonth(input) {
            let value = input.value.replace(/\D/g, '');
            if (value > 12) value = '12';
            input.value = value;
        }

        function formatExpiryYear(input) {
            let value = input.value.replace(/\D/g, '');
            if (value.length === 4) {
                const currentYear = new Date().getFullYear();
                if (value < currentYear) input.value = currentYear;
            }
            input.value = value.substring(0, 4);
        }

        function formatCVV(input) {
            let value = input.value.replace(/\D/g, '');
            input.value = value.substring(0, 4);
        }

        // UI helper functions
        function updateTopUpButton() {
            const button = document.getElementById('topUpBtn');
            const isValid = selectedAmount > 0 && selectedPaymentMethod;
            
            if (isValid) {
                button.disabled = false;
                button.classList.remove('btn-secondary');
                button.classList.add('btn-custom');
            } else {
                button.disabled = true;
                button.classList.remove('btn-custom');
                button.classList.add('btn-secondary');
            }
        }

        function resetTopUpButton(originalText = '<i class="fas fa-plus-circle me-2"></i>Top Up Now') {
            const button = document.getElementById('topUpBtn');
            button.innerHTML = originalText;
            button.disabled = false;
            updateTopUpButton();
        }

        function clearCardForm() {
            document.getElementById('cardNumber').value = '';
            document.getElementById('expiryMonth').value = '';
            document.getElementById('expiryYear').value = '';
            document.getElementById('cvv').value = '';
            document.getElementById('cardHolderName').value = '';
        }

        async function loadWalletBalance() {
            try {
                const response = await fetch('/api/wallet/balance');
                const result = await response.json();
                
                if (result.success) {
                    document.querySelector('.wallet-balance').textContent = `RM ${result.balance.toFixed(2)}`;
                }
            } catch (error) {
                console.error('Failed to load wallet balance:', error);
            }
        }

        function showSuccess(newBalance) {
            // Update modal content
            document.getElementById('modalSuccessAmount').textContent = selectedAmount.toFixed(2);
            document.getElementById('modalNewBalance').textContent = newBalance.toFixed(2);
            
            // Update wallet balance display
            document.querySelector('.wallet-balance').textContent = `RM ${newBalance.toFixed(2)}`;
            
            // Show success modal
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));
            successModal.show();
            
            // Reset selection
            selectedAmount = 0;
            selectedPaymentMethod = '';
            document.getElementById('customAmount').value = '';
            document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.payment-method').forEach(m => {
                m.classList.remove('selected');
            });
            document.getElementById('cardDetails').style.display = 'none';
            updateTopUpButton();
        }

        function showError(message) {
            // Update modal content
            document.getElementById('modalErrorMessage').textContent = message;
            
            // Show error modal
            const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            errorModal.show();
        }
    </script>
}