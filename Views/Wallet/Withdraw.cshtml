@{
    ViewData["Title"] = "Withdraw Funds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --secondary: #FF6B35;
            --accent: #1E5B32;
            --light: #F8F9FA;
            --dark: #343A40;
            --court: #E8F5E9;
        }
        
        .withdraw-page {
            background: #E8F5E9;
            min-height: calc(100vh - 80px);
        }

        .side-box {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .side-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .wallet-balance {
            font-size: 2.2rem;
            font-weight: bold;
            color: #2E8B57;
        }

        .quick-amount-btn {
            margin: 5px;
            transition: all 0.2s;
            border-radius: 50px;
            font-weight: 600;
            padding: 10px 20px;
            border: 2px solid #FF6B35;
            color: #FF6B35;
            background: transparent;
        }

        .quick-amount-btn:hover, .quick-amount-btn.active {
            background: #FF6B35;
            color: white;
            transform: scale(1.05);
        }

        .stats-card {
            text-align: center;
            padding: 20px 15px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .stats-card i {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #FF6B35;
        }

        .stats-card h4 {
            font-weight: 700;
            color: #343A40;
            margin-bottom: 5px;
            font-size: 1.4rem;
        }

        .stats-card p {
            color: #6c757d;
            margin: 0;
            font-weight: 500;
        }

        .page-header {
            background: #FF6B35;
            color: white;
            padding: 30px 0;
            border-radius: 0 0 20px 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .section-title {
            color: #FF6B35;
            font-weight: 700;
            border-bottom: 2px solid #FF6B35;
            padding-bottom: 10px;
            margin-bottom: 20px;
            display: inline-block;
            font-size: 1.4rem;
        }

        .btn-custom {
            background: #FF6B35;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-custom:hover {
            background: #E55A2B;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .btn-outline-custom {
            border: 2px solid #FF6B35;
            color: #FF6B35;
            border-radius: 50px;
            padding: 10px 24px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-outline-custom:hover {
            background: #FF6B35;
            color: white;
            transform: translateY(-2px);
        }

        .withdraw-method {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .withdraw-method:hover, .withdraw-method.selected {
            border-color: #FF6B35;
            background: rgba(255, 107, 53, 0.05);
        }

        .withdraw-method i {
            font-size: 2rem;
            color: #FF6B35;
            margin-bottom: 10px;
        }

        .amount-input-group {
            position: relative;
        }

        .amount-input-group:before {
            content: "RM";
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            color: #FF6B35;
            z-index: 5;
        }

        .amount-input-group input {
            padding-left: 50px;
            border-radius: 50px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .amount-input-group input:focus {
            border-color: #FF6B35;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }

        .court-pattern {
            position: relative;
            overflow: hidden;
        }

        .court-pattern::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                linear-gradient(90deg, transparent 49%, rgba(255,255,255,0.1) 49%, rgba(255,255,255,0.1) 51%, transparent 51%),
                linear-gradient(0deg, transparent 49%, rgba(255,255,255,0.1) 49%, rgba(255,255,255,0.1) 51%, transparent 51%);
            background-size: 60px 60px;
            pointer-events: none;
            z-index: 0;
        }

        .court-pattern > * {
            position: relative;
            z-index: 1;
        }

        .withdraw-success {
            display: none;
            text-align: center;
            padding: 40px 20px;
        }

        .withdraw-success i {
            font-size: 4rem;
            color: #2E8B57;
            margin-bottom: 20px;
        }

        .balance-warning {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 5px;
            display: none;
        }

        .instant-badge {
            background: #28a745;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: bold;
            margin-left: 5px;
        }

        .method-details {
            display: none;
            margin-top: 15px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid #FF6B35;
        }
    </style>
}

@section Scripts {
    <script>
        let selectedAmount = 0;
        let selectedWithdrawMethod = '';
        const availableBalance = 250.00;

        document.addEventListener('DOMContentLoaded', function() {
            // Quick amount buttons
            document.querySelectorAll('.quick-amount-btn').forEach(button => {
                button.addEventListener('click', function() {
                    selectedAmount = parseFloat(this.getAttribute('data-amount'));
                    document.getElementById('customAmount').value = selectedAmount;
                    
                    // Update button states
                    document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    validateWithdrawAmount();
                    updateWithdrawButton();
                });
            });

            // Custom amount input
            document.getElementById('customAmount').addEventListener('input', function() {
                selectedAmount = parseFloat(this.value) || 0;
                document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                validateWithdrawAmount();
                updateWithdrawButton();
            });

            // Withdraw method selection
            document.querySelectorAll('.withdraw-method').forEach(method => {
                method.addEventListener('click', function() {
                    selectedWithdrawMethod = this.getAttribute('data-method');
                    document.querySelectorAll('.withdraw-method').forEach(m => {
                        m.classList.remove('selected');
                    });
                    this.classList.add('selected');
                    
                    // Show method details
                    document.querySelectorAll('.method-details').forEach(detail => {
                        detail.style.display = 'none';
                    });
                    const detailsId = this.getAttribute('data-details');
                    if (detailsId) {
                        document.getElementById(detailsId).style.display = 'block';
                    }
                    
                    updateWithdrawButton();
                });
            });

            // Withdraw button handler
            document.getElementById('withdrawBtn').addEventListener('click', function() {
                if (!selectedAmount || selectedAmount <= 0) {
                    alert('Please enter a valid amount');
                    return;
                }
                if (selectedAmount > availableBalance) {
                    alert('Withdrawal amount exceeds available balance');
                    return;
                }
                if (!selectedWithdrawMethod) {
                    alert('Please select a withdrawal method');
                    return;
                }

                // Show processing state
                this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                this.disabled = true;

                // Simulate instant processing
                setTimeout(function() {
                    // Show success message
                    document.querySelector('.withdraw-section').style.display = 'none';
                    document.getElementById('withdrawSuccess').style.display = 'block';
                    document.getElementById('successAmount').textContent = selectedAmount.toFixed(2);
                    document.getElementById('successMethod').textContent = 
                        selectedWithdrawMethod === 'paypal' ? 'PayPal' : 
                        selectedWithdrawMethod === 'bank' ? 'Bank Account' : 'Debit Card';
                    
                    // In real app, send AJAX request to backend here
                    console.log('Withdrawal processed:', {
                        amount: selectedAmount,
                        method: selectedWithdrawMethod
                    });
                    
                    // Redirect to wallet management after 3 seconds
                    setTimeout(function() {
                        window.location.href = '/Wallet/WalletManagement';
                    }, 3000);
                }, 1500);
            });

            function validateWithdrawAmount() {
                const warning = document.getElementById('balanceWarning');
                if (selectedAmount > availableBalance) {
                    warning.style.display = 'block';
                } else {
                    warning.style.display = 'none';
                }
            }

            function updateWithdrawButton() {
                const button = document.getElementById('withdrawBtn');
                const isValid = selectedAmount > 0 && selectedAmount <= availableBalance && selectedWithdrawMethod;
                
                if (isValid) {
                    button.disabled = false;
                    button.classList.remove('btn-secondary');
                    button.classList.add('btn-custom');
                } else {
                    button.disabled = true;
                    button.classList.remove('btn-custom');
                    button.classList.add('btn-secondary');
                }
            }

            // Initial validation
            validateWithdrawAmount();
            updateWithdrawButton();
        });
    </script>
}

<div class="withdraw-page court-pattern">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-money-bill-wave me-3"></i>Withdraw Funds</h1>
                    <p class="lead mb-0">Instant withdrawal to your preferred account</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/Wallet/WalletManagement" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Wallet
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Left Column - Withdrawal Form -->
            <div class="col-lg-6">
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-wallet me-2"></i>Withdrawal Details</h3>
                    
                    <!-- Amount Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Withdrawal Amount</label>
                        <div class="d-flex flex-wrap mb-3">
                            <button type="button" class="btn quick-amount-btn" data-amount="10">RM 10</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="50">RM 50</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="100">RM 100</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="200">RM 200</button>
                        </div>
                        <div class="amount-input-group">
                            <input type="number" id="customAmount" class="form-control form-control-lg" 
                                   placeholder="Enter custom amount" min="1" step="0.01" max="250">
                        </div>
                        <div id="balanceWarning" class="balance-warning">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Withdrawal amount exceeds available balance
                        </div>
                    </div>

                    <!-- Withdrawal Method -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Withdrawal Method <span class="instant-badge">INSTANT</span></label>
                        <div class="withdraw-method" data-method="paypal" data-details="paypalDetails">
                            <div class="text-center">
                                <i class="fab fa-paypal"></i>
                                <h5>PayPal <span class="instant-badge">INSTANT</span></h5>
                                <p class="text-muted mb-0">Transfer to your PayPal account</p>
                            </div>
                        </div>
                        <div id="paypalDetails" class="method-details">
                            <div class="mb-3">
                                <label class="form-label">PayPal Email</label>
                                <input type="email" class="form-control" placeholder="your-email@example.com">
                            </div>
                        </div>

                        <div class="withdraw-method" data-method="bank" data-details="bankDetails">
                            <div class="text-center">
                                <i class="fas fa-university"></i>
                                <h5>Bank Transfer <span class="instant-badge">INSTANT</span></h5>
                                <p class="text-muted mb-0">Direct to your bank account</p>
                            </div>
                        </div>
                        <div id="bankDetails" class="method-details">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Bank Name</label>
                                    <input type="text" class="form-control" placeholder="e.g., Maybank">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Account Number</label>
                                    <input type="text" class="form-control" placeholder="1234567890">
                                </div>
                            </div>
                        </div>

                        <div class="withdraw-method" data-method="debit" data-details="debitDetails">
                            <div class="text-center">
                                <i class="fas fa-credit-card"></i>
                                <h5>Debit Card <span class="instant-badge">INSTANT</span></h5>
                                <p class="text-muted mb-0">Transfer to your debit card</p>
                            </div>
                        </div>
                        <div id="debitDetails" class="method-details">
                            <div class="mb-3">
                                <label class="form-label">Card Number</label>
                                <input type="text" class="form-control" placeholder="1234 5678 9012 3456">
                            </div>
                        </div>
                    </div>

                    <!-- Withdrawal Section -->
                    <div class="withdraw-section">
                        <button id="withdrawBtn" class="btn btn-secondary w-100 py-3" disabled>
                            <i class="fas fa-paper-plane me-2"></i>Withdraw Funds
                        </button>
                    </div>

                    <!-- Success Message -->
                    <div id="withdrawSuccess" class="withdraw-success">
                        <i class="fas fa-check-circle"></i>
                        <h3 class="text-success">Withdrawal Successful!</h3>
                        <p class="lead">RM <span id="successAmount">0.00</span> has been sent to your <span id="successMethod">account</span></p>
                        <p class="text-success"><i class="fas fa-bolt me-2"></i>Funds transferred instantly</p>
                        <p class="text-muted">Redirecting to wallet management...</p>
                    </div>
                </div>
            </div>

            <!-- Right Column - Wallet Info -->
            <div class="col-lg-6">
                <!-- Wallet Summary -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-info-circle me-2"></i>Withdrawal Information</h3>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="stats-card">
                                <i class="fas fa-wallet"></i>
                                <h4>RM 250.00</h4>
                                <p>Available for Withdrawal</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <h5><i class="fas fa-bolt me-2"></i>Instant Processing</h5>
                        <ul class="list-unstyled">
                            <li><i class="fab fa-paypal text-primary me-2"></i>PayPal: Instant transfer</li>
                            <li><i class="fas fa-university text-info me-2"></i>Bank Transfer: Instant</li>
                            <li><i class="fas fa-credit-card text-success me-2"></i>Debit Card: Instant</li>
                        </ul>
                    </div>
                    <div class="mt-3">
                        <h5><i class="fas fa-exclamation-circle me-2"></i>Important Notes</h5>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success me-2"></i>Minimum withdrawal: RM 10</li>
                            <li><i class="fas fa-check text-success me-2"></i>No withdrawal fees</li>
                            <li><i class="fas fa-check text-success me-2"></i>Instant processing</li>
                            <li><i class="fas fa-check text-success me-2"></i>Secure transaction</li>
                        </ul>
                    </div>
                </div>

                <!-- Recent Withdrawals -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-history me-2"></i>Recent Withdrawals</h3>
                    <div class="recent-activity">
                        <div class="activity-item">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <i class="fas fa-money-bill-wave text-danger me-2"></i>
                                    <span>Withdrawal - PayPal</span>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-danger">- RM 50.00</div>
                                    <small class="text-success"><i class="fas fa-bolt me-1"></i>Instant</small>
                                    <br>
