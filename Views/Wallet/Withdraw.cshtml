@{
    ViewData["Title"] = "Withdraw Funds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --secondary: #FF6B35;
            --accent: #1E5B32;
            --light: #F8F9FA;
            --dark: #343A40;
            --court: #E8F5E9;
        }
        
        .withdraw-page {
            background: #E8F5E9;
            min-height: calc(100vh - 80px);
        }

        .side-box {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .side-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .wallet-balance {
            font-size: 2.2rem;
            font-weight: bold;
            color: #2E8B57;
        }

        .quick-amount-btn {
            margin: 5px;
            transition: all 0.2s;
            border-radius: 50px;
            font-weight: 600;
            padding: 10px 20px;
            border: 2px solid #2E8B57;
            color: #2E8B57;
            background: transparent;
        }

        .quick-amount-btn:hover, .quick-amount-btn.active {
            background: #2E8B57;
            color: white;
            transform: scale(1.05);
        }

        .stats-card {
            text-align: center;
            padding: 20px 15px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .stats-card i {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #2E8B57;
        }

        .stats-card h4 {
            font-weight: 700;
            color: #343A40;
            margin-bottom: 5px;
            font-size: 1.4rem;
        }

        .stats-card p {
            color: #6c757d;
            margin: 0;
            font-weight: 500;
        }

        .page-header {
            background: #2E8B57;
            color: white;
            padding: 30px 0;
            border-radius: 0 0 20px 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .section-title {
            color: #2E8B57;
            font-weight: 700;
            border-bottom: 2px solid #2E8B57;
            padding-bottom: 10px;
            margin-bottom: 20px;
            display: inline-block;
            font-size: 1.4rem;
        }

        .btn-custom {
            background: #2E8B57;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-custom:hover {
            background: #1E5B32;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .withdraw-method {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .withdraw-method:hover, .withdraw-method.selected {
            border-color: #2E8B57;
            background: rgba(46, 139, 87, 0.05);
        }

        .withdraw-method i {
            font-size: 2rem;
            color: #2E8B57;
            margin-bottom: 10px;
        }

        .amount-input-group {
            position: relative;
        }

        .amount-input-group:before {
            content: "RM";
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            color: #2E8B57;
            z-index: 5;
        }

        .amount-input-group input {
            padding-left: 50px;
            border-radius: 50px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .amount-input-group input:focus {
            border-color: #2E8B57;
            box-shadow: 0 0 0 0.2rem rgba(46, 139, 87, 0.25);
        }

        .court-pattern {
            position: relative;
            overflow: hidden;
        }

        .court-pattern::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                linear-gradient(90deg, transparent 49%, rgba(255,255,255,0.1) 49%, rgba(255,255,255,0.1) 51%, transparent 51%),
                linear-gradient(0deg, transparent 49%, rgba(255,255,255,0.1) 49%, rgba(255,255,255,0.1) 51%, transparent 51%);
            background-size: 60px 60px;
            pointer-events: none;
            z-index: 0;
        }

        .court-pattern > * {
            position: relative;
            z-index: 1;
        }

        .balance-warning {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 5px;
            display: none;
        }

        .method-details {
            display: none;
            margin-top: 15px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid #2E8B57;
        }

        .calculation-box {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            display: none;
        }

        .calculation-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            padding-bottom: 8px;
            border-bottom: 1px solid #e9ecef;
        }

        .calculation-row.total {
            font-weight: bold;
            font-size: 1.1rem;
            color: #2E8B57;
            border-bottom: none;
            margin-top: 10px;
            padding-top: 10px;
            border-top: 2px solid #e9ecef;
        }

        /* Modal Styles */
        .modal-success {
            color: #2E8B57;
        }

        .modal-error {
            color: #dc3545;
        }

        .modal-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }
    </style>
}

<div class="withdraw-page court-pattern">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-money-bill-wave me-3"></i>Withdraw Funds</h1>
                    <p class="lead mb-0">Instant withdrawal to your preferred account</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/Wallet/WalletManagement" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Wallet
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Left Column - Withdrawal Form -->
            <div class="col-lg-6">
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-wallet me-2"></i>Withdrawal Details</h3>
                    
                    <!-- Amount Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Withdrawal Amount</label>
                        <div class="d-flex flex-wrap mb-3">
                            <button type="button" class="btn quick-amount-btn" data-amount="50">RM 50</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="100">RM 100</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="200">RM 200</button>
                            <button type="button" class="btn quick-amount-btn" data-amount="500">RM 500</button>
                        </div>
                        <div class="amount-input-group">
                            <input type="number" id="customAmount" class="form-control form-control-lg" 
                                   placeholder="Enter custom amount" min="10" step="0.01">
                        </div>
                        <small class="text-muted">Minimum withdrawal: RM 10.00</small>
                        <div id="balanceWarning" class="balance-warning">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Withdrawal amount exceeds available balance
                        </div>
                    </div>

                    <!-- Withdrawal Method -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Withdrawal Method</label>
                        
                        <!-- Bank Transfer -->
                        <div class="withdraw-method" data-method="BankTransfer">
                            <div class="text-center">
                                <i class="fas fa-university"></i>
                                <h5>Bank Transfer</h5>
                                <p class="text-muted mb-0">Transfer to your bank account</p>
                            </div>
                        </div>
                        <div id="BankTransferDetails" class="method-details">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label">Bank Name</label>
                                    <input type="text" id="bankName" class="form-control" placeholder="e.g., Maybank, CIMB">
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label">Account Number</label>
                                    <input type="text" id="accountNumber" class="form-control" placeholder="Enter account number">
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label">Account Holder Name</label>
                                    <input type="text" id="accountHolderName" class="form-control" placeholder="As per bank account">
                                </div>
                            </div>
                        </div>

                        <!-- PayPal -->
                        <div class="withdraw-method" data-method="PayPal">
                            <div class="text-center">
                                <i class="fab fa-paypal"></i>
                                <h5>PayPal</h5>
                                <p class="text-muted mb-0">Withdraw to your PayPal account</p>
                            </div>
                        </div>
                        <div id="PayPalDetails" class="method-details">
                            <div class="mb-3">
                                <label class="form-label">PayPal Email</label>
                                <input type="email" id="paypalEmail" class="form-control" placeholder="your-email@example.com">
                            </div>
                        </div>

                        <!-- Debit Card -->
                        <div class="withdraw-method" data-method="DebitCard">
                            <div class="text-center">
                                <i class="fas fa-credit-card"></i>
                                <h5>Debit Card</h5>
                                <p class="text-muted mb-0">Withdraw to your debit card</p>
                            </div>
                        </div>
                        <div id="DebitCardDetails" class="method-details">
                            <div class="mb-3">
                                <label class="form-label">Card Number</label>
                                <input type="text" id="cardNumber" class="form-control" placeholder="1234 5678 9012 3456">
                            </div>
                        </div>
                    </div>

                    <!-- Calculation Preview -->
                    <div id="calculationPreview" class="calculation-box">
                        <h6 class="fw-bold mb-3">Withdrawal Summary</h6>
                        <div class="calculation-row total">
                            <span>Amount to Withdraw:</span>
                            <span id="calcAmount">RM 0.00</span>
                        </div>
                    </div>

                    <!-- Withdrawal Section -->
                    <div class="withdraw-section">
                        <button id="withdrawBtn" class="btn btn-secondary w-100 py-3" disabled>
                            <i class="fas fa-paper-plane me-2"></i>Withdraw Funds
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Column - Wallet Info -->
            <div class="col-lg-6">
                <!-- Wallet Summary -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-wallet me-2"></i>Wallet Summary</h3>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="stats-card">
                                <i class="fas fa-wallet"></i>
                                <h4 class="wallet-balance">RM @ViewData["CurrentBalance"]</h4>
                                <p>Available Balance</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Withdrawals -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-history me-2"></i>Recent Withdrawals</h3>
                    <div class="recent-activity" id="recentWithdrawals">
                        <div class="activity-item mb-3">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <i class="fas fa-money-bill-wave text-primary me-2"></i>
                                    <span>Withdraw - Bank Transfer</span>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-primary">- RM 200.00</div>
                                    <small class="text-muted">2 days ago</small>
                                </div>
                            </div>
                        </div>
                        <div class="activity-item mb-3">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <i class="fas fa-money-bill-wave text-primary me-2"></i>
                                    <span>Withdraw - PayPal</span>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-primary">- RM 100.00</div>
                                    <small class="text-muted">1 week ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="modal-success">
                    <i class="fas fa-check-circle modal-icon"></i>
                    <h3>Withdrawal Successful!</h3>
                    <p class="lead">Your withdrawal request has been processed</p>
                    <p>Amount: <strong>RM <span id="modalSuccessAmount">0.00</span></strong></p>
                    <p>New Balance: <strong>RM <span id="modalNewBalance">0.00</span></strong></p>
                </div>
                <div class="mt-4">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="modal-error">
                    <i class="fas fa-times-circle modal-icon"></i>
                    <h3>Withdrawal Failed</h3>
                    <p id="modalErrorMessage" class="lead">An error occurred. Please try again.</p>
                </div>
                <div class="mt-4">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Try Again</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedAmount = 0;
        let selectedWithdrawMethod = '';

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize modals
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));
            const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));

            // Load real wallet balance
            loadWalletBalance();
            loadRecentWithdrawals();

            // Quick amount buttons
            document.querySelectorAll('.quick-amount-btn').forEach(button => {
                button.addEventListener('click', function() {
                    selectedAmount = parseFloat(this.getAttribute('data-amount'));
                    document.getElementById('customAmount').value = selectedAmount;
                    
                    document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    updateCalculation();
                    updateWithdrawButton();
                });
            });

            // Custom amount input
            document.getElementById('customAmount').addEventListener('input', function() {
                selectedAmount = parseFloat(this.value) || 0;
                document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                updateCalculation();
                updateWithdrawButton();
            });

            // Withdraw method selection
            document.querySelectorAll('.withdraw-method').forEach(method => {
                method.addEventListener('click', function() {
                    selectedWithdrawMethod = this.getAttribute('data-method');
                    document.querySelectorAll('.withdraw-method').forEach(m => {
                        m.classList.remove('selected');
                    });
                    this.classList.add('selected');
                    
                    // Show method details
                    document.querySelectorAll('.method-details').forEach(detail => {
                        detail.style.display = 'none';
                    });
                    const detailsElement = document.getElementById(selectedWithdrawMethod + 'Details');
                    if (detailsElement) {
                        detailsElement.style.display = 'block';
                    }
                    
                    updateCalculation();
                    updateWithdrawButton();
                });
            });

            // Card number formatting
            const cardNumberInput = document.getElementById('cardNumber');
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{4})/g, '$1 ').trim();
                    e.target.value = value.substring(0, 19);
                });
            }

            // Account number formatting (numbers only)
            const accountNumberInput = document.getElementById('accountNumber');
            if (accountNumberInput) {
                accountNumberInput.addEventListener('input', function(e) {
                    e.target.value = e.target.value.replace(/\D/g, '');
                });
            }

            // Withdraw button handler - SIMULATED UI + REAL API
            document.getElementById('withdrawBtn').addEventListener('click', function() {
                if (!selectedAmount || selectedAmount < 10) {
                    showError('Minimum withdrawal amount is RM 10.00');
                    return;
                }
                if (!selectedWithdrawMethod) {
                    showError('Please select a withdraw method');
                    return;
                }

                // Validate payment details based on method
                if (!validatePaymentDetails(selectedWithdrawMethod)) {
                    return;
                }

                // Show processing state
                const originalText = this.innerHTML;
                this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                this.disabled = true;

                // SIMULATION + REAL API - Process after delay
                setTimeout(async () => {
                    try {
                        await processWithdrawal(selectedAmount, selectedWithdrawMethod);
                        resetWithdrawButton(originalText);
                    } catch (error) {
                        console.error('Withdrawal Error:', error);
                        showError(error.message || 'An error occurred. Please try again.');
                        resetWithdrawButton(originalText);
                    }
                }, 1500);
            });
        });

        // Process withdrawal with REAL API
        async function processWithdrawal(amount, withdrawMethod) {
            // Get payment details based on method
            const paymentDetails = getPaymentDetails(withdrawMethod);
            
            if (!paymentDetails) {
                throw new Error('Please fill in all required payment details');
            }

            const response = await fetch('/api/wallet/withdraw', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    amount: amount,
                    withdrawMethod: withdrawMethod,
                    paymentDetails: paymentDetails
                })
            });

            const result = await response.json();

            if (result.success) {
                showSuccess(result.newBalance, amount);
                loadWalletBalance(); // Reload real balance
                loadRecentWithdrawals(); // Reload real transactions
            } else {
                throw new Error(result.message);
            }
        }

        // Get payment details based on selected method
        function getPaymentDetails(method) {
            switch (method) {
                case 'BankTransfer':
                    const bankName = document.getElementById('bankName')?.value.trim();
                    const accountNumber = document.getElementById('accountNumber')?.value.trim();
                    const accountHolderName = document.getElementById('accountHolderName')?.value.trim();
                    
                    if (!bankName || !accountNumber || !accountHolderName) {
                        throw new Error('Please fill in all bank account details');
                    }
                    
                    return {
                        bankName: bankName,
                        accountNumber: accountNumber,
                        accountHolderName: accountHolderName
                    };
                    
                case 'PayPal':
                    const paypalEmail = document.getElementById('paypalEmail')?.value.trim();
                    if (!paypalEmail) {
                        throw new Error('Please enter your PayPal email');
                    }
                    
                    return { paypalEmail: paypalEmail };
                    
                case 'DebitCard':
                    const cardNumber = document.getElementById('cardNumber')?.value.trim();
                    if (!cardNumber) {
                        throw new Error('Please enter your card number');
                    }
                    
                    return { cardNumber: cardNumber };
                    
                default:
                    return null;
            }
        }

        // Validate payment details based on method
        function validatePaymentDetails(method) {
            switch (method) {
                case 'BankTransfer':
                    const bankName = document.getElementById('bankName')?.value.trim();
                    const accountNumber = document.getElementById('accountNumber')?.value.trim();
                    const accountHolderName = document.getElementById('accountHolderName')?.value.trim();
                    
                    if (!bankName || !accountNumber || !accountHolderName) {
                        showError('Please fill in all bank account details');
                        return false;
                    }
                    
                    if (!/^\d+$/.test(accountNumber)) {
                        showError('Account number should contain only numbers');
                        return false;
                    }
                    
                    return true;
                    
                case 'PayPal':
                    const paypalEmail = document.getElementById('paypalEmail')?.value.trim();
                    if (!paypalEmail) {
                        showError('Please enter your PayPal email');
                        return false;
                    }
                    
                    return true;
                    
                case 'DebitCard':
                    const cardNumber = document.getElementById('cardNumber')?.value.trim();
                    if (!cardNumber) {
                        showError('Please enter your card number');
                        return false;
                    }
                    
                    const cleanCardNumber = cardNumber.replace(/\s/g, '');
                    if (cleanCardNumber.length < 13 || cleanCardNumber.length > 19) {
                        showError('Please enter a valid card number (13-19 digits)');
                        return false;
                    }
                    
                    if (!/^\d+$/.test(cleanCardNumber)) {
                        showError('Card number should contain only numbers');
                        return false;
                    }
                    
                    return true;
                    
                default:
                    return false;
            }
        }

        // Load real wallet balance from API
        async function loadWalletBalance() {
            try {
                const response = await fetch('/api/wallet/balance');
                const result = await response.json();
                
                if (result.success) {
                    const balanceElement = document.querySelector('.wallet-balance');
                    if (balanceElement) {
                        balanceElement.textContent = `RM ${result.balance.toFixed(2)}`;
                    }
                }
            } catch (error) {
                console.error('Failed to load wallet balance:', error);
            }
        }

        // Load real recent withdrawals
        async function loadRecentWithdrawals() {
            try {
                const response = await fetch('/api/wallet/transactions');
                const result = await response.json();
                
                if (result.success) {
                    displayRecentWithdrawals(result.transactions);
                }
            } catch (error) {
                console.error('Failed to load recent withdrawals:', error);
                // Keep existing UI if API fails
            }
        }

        // Display real recent withdrawals
        function displayRecentWithdrawals(transactions) {
            const container = document.getElementById('recentWithdrawals');
            if (!container) return;

            if (!transactions || transactions.length === 0) {
                container.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-receipt fa-2x mb-2"></i>
                        <p>No recent withdrawals</p>
                    </div>
                `;
                return;
            }

            // Filter only withdrawal transactions and take last 3
            const withdrawTransactions = transactions
                .filter(t => t.type === 'Withdraw' && t.status === 'Completed')
                .slice(0, 5);

            if (withdrawTransactions.length === 0) {
                container.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-receipt fa-2x mb-2"></i>
                        <p>No recent withdrawals</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = withdrawTransactions.map(transaction => `
                <div class="activity-item mb-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <i class="fas fa-money-bill-wave text-primary me-2"></i>
                            <span>Withdraw - ${transaction.method}</span>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold text-primary">- RM ${Math.abs(transaction.amount).toFixed(2)}</div>
                            <small class="text-muted">${transaction.formattedDate}</small>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Update calculation preview with real balance check
        function updateCalculation() {
            const calculationBox = document.getElementById('calculationPreview');
            const warning = document.getElementById('balanceWarning');
            
            if (selectedAmount > 0 && selectedWithdrawMethod) {
                document.getElementById('calcAmount').textContent = `RM ${selectedAmount.toFixed(2)}`;
                calculationBox.style.display = 'block';
                
                // Check balance warning using current displayed balance
                const currentBalanceText = document.querySelector('.wallet-balance').textContent;
                const currentBalance = parseFloat(currentBalanceText.replace('RM ', '')) || 0;
                
                if (selectedAmount > currentBalance) {
                    if (warning) warning.style.display = 'block';
                } else {
                    if (warning) warning.style.display = 'none';
                }
            } else {
                calculationBox.style.display = 'none';
                if (warning) warning.style.display = 'none';
            }
        }

        // UI helper functions
        function updateWithdrawButton() {
            const button = document.getElementById('withdrawBtn');
            const isValid = selectedAmount >= 10 && selectedWithdrawMethod;
            
            if (isValid) {
                button.disabled = false;
                button.classList.remove('btn-secondary');
                button.classList.add('btn-custom');
            } else {
                button.disabled = true;
                button.classList.remove('btn-custom');
                button.classList.add('btn-secondary');
            }
        }

        function resetWithdrawButton(originalText = '<i class="fas fa-paper-plane me-2"></i>Withdraw Funds') {
            const button = document.getElementById('withdrawBtn');
            button.innerHTML = originalText;
            button.disabled = false;
            updateWithdrawButton();
        }

        function showSuccess(newBalance, amount) {
            // Update modal content
            document.getElementById('modalSuccessAmount').textContent = amount.toFixed(2);
            document.getElementById('modalNewBalance').textContent = newBalance.toFixed(2);
            
            // Update wallet balance display
            document.querySelector('.wallet-balance').textContent = `RM ${newBalance.toFixed(2)}`;
            
            // Show success modal
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));
            successModal.show();
            
            // Reset form after modal closes
            successModal._element.addEventListener('hidden.bs.modal', function() {
                clearWithdrawForm();
            });
        }

        function showError(message) {
            document.getElementById('modalErrorMessage').textContent = message;
            const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            errorModal.show();
        }

        function clearWithdrawForm() {
            selectedAmount = 0;
            selectedWithdrawMethod = '';
            document.getElementById('customAmount').value = '';
            
            // Clear all input fields
            const inputFields = [
                'bankName', 'accountNumber', 'accountHolderName',
                'paypalEmail', 'cardNumber'
            ];
            
            inputFields.forEach(fieldId => {
                const element = document.getElementById(fieldId);
                if (element) element.value = '';
            });
            
            // Reset UI states
            document.querySelectorAll('.quick-amount-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.withdraw-method').forEach(m => {
                m.classList.remove('selected');
            });
            document.querySelectorAll('.method-details').forEach(detail => {
                detail.style.display = 'none';
            });
            
            document.getElementById('calculationPreview').style.display = 'none';
            document.getElementById('balanceWarning').style.display = 'none';
            updateWithdrawButton();
        }
    </script>
}