@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --secondary: #FF6B35;
            --accent: #1E5B32;
            --light: #F8F9FA;
            --dark: #343A40;
            --court: #E8F5E9;
        }

        .wallet-page {
            background: #E8F5E9;
            min-height: calc(100vh - 80px);
        }

        .side-box {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .side-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .wallet-balance {
            font-size: 2.2rem;
            font-weight: bold;
            color: #2E8B57;
        }

        .quick-amount-btn {
            margin: 5px;
            transition: all 0.2s;
            border-radius: 50px;
            font-weight: 600;
        }

        .quick-amount-btn:hover {
            transform: scale(1.05);
        }

        .action-card {
            height: 100%;
            transition: all 0.3s ease;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            border-radius: 12px;
            overflow: hidden;
        }

        .action-card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .action-card.top-up {
            background: #2E8B57;
            color: white;
        }

        .action-card.withdraw {
            background: #FF6B35;
            color: white;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .status-pending {
            background-color: #FFF3CD;
            color: #856404;
        }

        .status-completed {
            background-color: #D1ECF1;
            color: #0C5460;
        }

        .wallet-summary {
            background: rgba(46, 139, 87, 0.1);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 25px;
            border-left: 5px solid #2E8B57;
        }

        .stats-card {
            text-align: center;
            padding: 20px 15px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .stats-card i {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #2E8B57;
        }

        .stats-card h4 {
            font-weight: 700;
            color: #343A40;
            margin-bottom: 5px;
            font-size: 1.4rem;
        }

        .stats-card p {
            color: #6c757d;
            margin: 0;
            font-weight: 500;
        }

        .page-header {
            background: #2E8B57;
            color: white;
            padding: 30px 0;
            border-radius: 0 0 20px 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            color: #2E8B57;
            font-weight: 700;
            border-bottom: 2px solid #2E8B57;
            padding-bottom: 10px;
            margin-bottom: 20px;
            display: inline-block;
            font-size: 1.4rem;
        }

        .btn-custom {
            background: #2E8B57;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-custom:hover {
            background: #1E5B32;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-outline-custom {
            border: 2px solid #2E8B57;
            color: #2E8B57;
            border-radius: 50px;
            padding: 10px 24px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-outline-custom:hover {
            background: #2E8B57;
            color: white;
            transform: translateY(-2px);
        }

        .transaction-icon {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            font-size: 1.1rem;
        }

        .transaction-icon.top-up {
            background: rgba(46, 139, 87, 0.15);
            color: #2E8B57;
        }

        .transaction-icon.withdraw {
            background: rgba(255, 107, 53, 0.15);
            color: #FF6B35;
        }

        .transaction-icon.escrow {
            background: rgba(13, 110, 253, 0.15);
            color: #0d6efd;
        }

        .transaction-icon.released {
            background: rgba(111, 66, 193, 0.15);
            color: #6f42c1;
        }

        .recent-activity {
            max-height: 320px;
            overflow-y: auto;
            padding-right: 10px;
        }

        .activity-item {
            padding: 16px 0;
            border-bottom: 1px solid #eee;
            transition: all 0.3s;
        }

        .activity-item:hover {
            background: rgba(52, 152, 219, 0.05);
            border-radius: 10px;
            padding: 16px 12px;
            margin: 0 -12px;
        }

        .activity-item:last-child {
            border-bottom: none;
        }

        .pagination .page-link {
            border: 2px solid #dee2e6;
            border-radius: 10px;
            margin: 0 4px;
            font-weight: 600;
            padding: 8px 16px;
        }

        .page-link {
            color: #2E8B57;
        }

        .pagination .page-item.active .page-link {
            background: #2E8B57;
            border-color: #2E8B57;
            box-shadow: 0 3px 10px rgba(46, 139, 87, 0.3);
        }

        .recent-activity::-webkit-scrollbar {
            width: 8px;
        }

        .recent-activity::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .recent-activity::-webkit-scrollbar-thumb {
            background: #2E8B57;
            border-radius: 10px;
        }

        .recent-activity::-webkit-scrollbar-thumb:hover {
            background: #1E5B32;
        }

        .court-pattern {
            position: relative;
            overflow: hidden;
        }

        .court-pattern::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: linear-gradient(90deg, transparent 49%, rgba(255, 255, 255, 0.1) 49%, rgba(255, 255, 255, 0.1) 51%, transparent 51%), linear-gradient(0deg, transparent 49%, rgba(255, 255, 255, 0.1) 49%, rgba(255, 255, 255, 0.1) 51%, transparent 51%);
            background-size: 60px 60px;
            pointer-events: none;
            z-index: 0;
        }

        .court-pattern>* {
            position: relative;
            z-index: 1;
        }

        .table-light {
            background: #F8F9FA;
            border-bottom: 3px solid #2E8B57;
        }

        .table-hover tbody tr:hover {
            background: rgba(46, 139, 87, 0.05);
        }

        .text-success {
            color: #28a745 !important;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .badge.bg-success {
            background: #28a745 !important;
        }

        .badge.bg-primary {
            background: #3498db !important;
        }

        .badge.bg-danger {
            background: #dc3545 !important;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Wallet Chart -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('walletChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Available Balance', 'Escrow', 'Spent'],
                    datasets: [{
                        data: [
                                                    @Model.Wallet?.WalletBalance ?? 0,
                                                    @Model.Wallet?.EscrowBalance ?? 0,
                                                    @Model.Wallet?.TotalSpent ?? 0
                        ],
                        backgroundColor: [
                            'rgba(46, 139, 87, 0.8)',
                            'rgba(13, 110, 253, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ]
                    }]
                },
                options: { responsive: true, plugins: { legend: { display: false } } }
            });
        });
    </script>

    <!-- Pagination -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const rowsPerPage = 10;
            const tableBody = document.querySelector("#transactionTable tbody");
            let rows = Array.from(tableBody.querySelectorAll("tr"));
            let currentPage = 1;

            const searchInput = document.getElementById("searchInput");
            const filterType = document.getElementById("filterType");

            function applyFilters() {
                let keyword = searchInput.value.toLowerCase();
                let typeFilter = filterType.value.toLowerCase();

                rows.forEach(row => {
                    const date = row.cells[0].textContent.toLowerCase();
                    const type = row.cells[1].innerText.toLowerCase();
                    const description = row.cells[2].innerText.toLowerCase();

                    const matchesKeyword =
                        date.includes(keyword) ||
                        type.includes(keyword) ||
                        description.includes(keyword);

                    const matchesType =
                        typeFilter === "all" || type.includes(typeFilter);

                    row.style.display = (matchesKeyword && matchesType) ? "" : "none";
                });

                updatePagination();
            }

            function updatePagination() {

                let visibleRows = rows.filter(r => r.style.display !== "none");
                let totalPages = Math.ceil(visibleRows.length / rowsPerPage);

                currentPage = 1;
                renderFilteredPage(visibleRows, totalPages);
            }

            function renderFilteredPage(visibleRows, totalPages) {

                tableBody.innerHTML = "";

                const start = (currentPage - 1) * rowsPerPage;
                const end = start + rowsPerPage;
                visibleRows.slice(start, end).forEach(r => tableBody.appendChild(r));

                renderPagination(totalPages, visibleRows);
            }

            function renderPagination(totalPages, visibleRows) {

                const pagination = document.getElementById("transactionPagination");
                pagination.innerHTML = "";

                // Previous
                pagination.innerHTML += `
                    <li class="page-item ${currentPage === 1 ? "disabled" : ""}">
                        <a class="page-link" data-page="${currentPage - 1}">Previous</a>
                    </li>`;

                // Page numbers
                for (let i = 1; i <= totalPages; i++) {
                    pagination.innerHTML += `
                        <li class="page-item ${i === currentPage ? "active" : ""}">
                            <a class="page-link" data-page="${i}">${i}</a>
                        </li>`;
                }

                // Next
                pagination.innerHTML += `
                    <li class="page-item ${currentPage === totalPages ? "disabled" : ""}">
                        <a class="page-link" data-page="${currentPage + 1}">Next</a>
                    </li>`;

                // Bind click events
                pagination.querySelectorAll("a").forEach(a => {
                    a.addEventListener("click", function (e) {
                        e.preventDefault();
                        const page = parseInt(this.getAttribute("data-page"));
                        if (page >= 1 && page <= totalPages) {
                            currentPage = page;
                            renderFilteredPage(visibleRows, totalPages);
                        }
                    });
                });
            }

            // Events
            searchInput.addEventListener("input", applyFilters);
            filterType.addEventListener("change", applyFilters);

            // Initial render
            updatePagination();
        });
    </script>


}

<div class="wallet-page court-pattern"> <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-wallet me-3"></i>My Wallet</h1>
                    <p class="lead mb-0">Manage your funds and track your transactions</p>
                </div>
                <div class="col-md-4 text-end"> <a href="/Home/EditProfile" class="btn btn-light btn-sm"> <i
                            class="fas fa-arrow-left me-2"></i>Back to Profile </a> </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">

            <!-- LEFT -->
            <div class="col-lg-8">

                <!-- FINANCIAL OVERVIEW -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-chart-line me-2"></i>Financial Overview</h3>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="stats-card">
                                <i class="fas fa-wallet"></i>
                                <h4>RM @(Model.Wallet?.WalletBalance.ToString("0.00") ?? "0.00")</h4>
                                <p>Available Balance</p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="stats-card">
                                <i class="fas fa-lock"></i>
                                <h4>RM @(Model.Wallet?.EscrowBalance.ToString("0.00") ?? "0.00")</h4>
                                <p>In Escrow</p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="stats-card">
                                <i class="fas fa-money-bill-wave"></i>
                                <h4>RM @(Model.Wallet?.TotalSpent.ToString("0.00") ?? "0.00")</h4>
                                <p>Total Spent</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex mt-3">
                        <a href="/Wallet/TopUp" class="btn btn-outline-custom me-2">
                            <i class="fas fa-plus-circle me-2"></i>Top Up
                        </a>
                        <a href="/Wallet/Withdraw" class="btn btn-outline-custom">
                            <i class="fas fa-money-bill-wave me-2"></i>Withdraw
                        </a>
                    </div>
                </div>

                <!-- TRANSACTION TABLE -->
                <div class="side-box">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="section-title mb-0"><i class="fas fa-receipt me-2"></i>Payment Transactions</h3>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-2">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" id="searchInput" class="form-control"
                                    placeholder="Search by date or type">
                            </div>
                        </div>

                        <div class="col-md-6 mb-2">
                            <select id="filterType" class="form-select">
                                <option value="all" selected>All Types</option>
                                <option value="TopUp">Top Up</option>
                                <option value="Withdraw">Withdraw</option>
                                <option value="Escrow_Hold">Escrow Hold</option>
                                <option value="Escrow_Released">Escrow Released</option>
                                <option value="Escrow_Receive">Escrow Received</option>
                                <option value="Escrow_Refund">Escrow Refund</option>
                            </select>
                        </div>
                    </div>

                    <div class="table-responsive" style="max-height:400px; overflow-y:auto;">
                        <table class="table table-hover" id="transactionTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Amount (RM)</th>
                                    <th>Status</th>
                                    @* <th></th> *@
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Transactions != null && Model.Transactions.Count > 0)
                                {
                                    foreach (var t in Model.Transactions.OrderByDescending(x => x.CreatedAt))
                                    {
                                        var icon = t.TransactionType switch
    {
        "TopUp" => "transaction-icon top-up fas fa-arrow-down",
        "Withdraw" => "transaction-icon withdraw fas fa-arrow-up",
        "Escrow_Hold" => "transaction-icon escrow fas fa-lock",
        "Escrow_Released" or "Released" => "transaction-icon released fas fa-unlock",
        "Escrow_Receive" => "transaction-icon released fas fa-hand-holding-usd",
        "Escrow_Refund" or "Refund" => "transaction-icon withdraw fas fa-undo",
        _ => "transaction-icon fas fa-money-bill"
    };

                                        var isPositive = t.Amount >= 0;

                                        <tr>
                                            <td>@t.CreatedAt.ToString("yyyy-MM-dd")</td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="@icon"></div>
                                                    <span>@t.TransactionType</span>
                                                </div>
                                            </td>

                                            <td>@(t.Description ?? "-")</td>

                                            <td class="fw-bold @(isPositive ? "text-success" : "text-danger")">
                                                @((isPositive ? "+ RM " : "- RM ") + Math.Abs(t.Amount).ToString("0.00"))
                                            </td>

                                            <td>
                                                <span
                                                    class="status-badge @(t.PaymentStatus == "Completed" ? "status-completed" : "status-pending")">
                                                    @t.PaymentStatus
                                                </span>
                                            </td>

                                            @* <td>
                                                <button class="btn btn-sm btn-outline-custom"><i
                                                        class="fas fa-eye"></i></button>
                                            </td> *@
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No transactions found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <nav class="mt-3">
                        <ul class="pagination justify-content-center" id="transactionPagination"></ul>
                    </nav>
                </div>

            </div>

            <!-- RIGHT SIDE -->
            <div class="col-lg-4">

                <!-- PIE CHART -->
                <div class="side-box text-center">
                    <h3 class="section-title"><i class="fas fa-chart-pie me-2"></i>Wallet Distribution</h3>
                    <canvas id="walletChart" style="max-height:250px;"></canvas>

                    <div class="mt-3">
                        <span class="badge bg-success p-2">Balance</span>
                        <span class="badge bg-primary p-2">Escrow</span>
                        <span class="badge bg-danger p-2">Spent</span>
                    </div>
                </div>

                <!-- RECENT ACTIVITY -->
                <div class="side-box">
                    <h3 class="section-title"><i class="fas fa-history me-2"></i>Recent Activity</h3>

                    <div class="recent-activity">
                        @if (Model.Transactions != null && Model.Transactions.Count > 0)
                        {
                            foreach (var t in Model.Transactions.OrderByDescending(t => t.CreatedAt).Take(5))
                            {
                                var icon = t.TransactionType switch
                                {
                                    "TopUp" => "fas fa-arrow-down text-success",
                                    "Withdraw" => "fas fa-arrow-up text-danger",
                                    "Escrow_Hold" => "fas fa-lock text-primary",
                                    "Released" => "fas fa-unlock text-info",
                                    _ => "fas fa-money-bill"
                                };

                                var isPositive = t.Amount >= 0;

                                <div class="activity-item">
                                    <div class="d-flex justify-content-between">
                                        <div><i class="@icon me-2"></i> @t.TransactionType</div>
                                        <div class="text-end">
                                            <strong class="@(isPositive ? "text-success" : "text-danger")">
                                                @((isPositive ? "+ RM " : "- RM ") + Math.Abs(t.Amount).ToString("0.00"))
                                            </strong>
                                            <br />
                                            <small class="text-muted">@t.CreatedAt.ToString("dd MMM yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No recent activity.</p>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>