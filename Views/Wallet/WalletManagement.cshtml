@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Wallet Chart
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('walletChart').getContext('2d');
            const walletChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Available Balance', 'Escrow', 'Spent'],
                    datasets: [{
                        data: [250, 120, 80],
                        backgroundColor: [
                            'rgba(46, 139, 87, 0.8)',
                            'rgba(13, 110, 253, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgba(46, 139, 87, 1)',
                            'rgba(13, 110, 253, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: RM ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });

            // Table filtering and sorting
            const searchInput = document.getElementById('searchInput');
            const filterType = document.getElementById('filterType');
            const table = document.getElementById('transactionTable').getElementsByTagName('tbody')[0];
            let sortDirection = 'desc';

            function filterTransactions() {
                const search = searchInput.value.toLowerCase();
                const typeFilter = filterType.value;

                Array.from(table.rows).forEach(row => {
                    const date = row.cells[0].textContent.toLowerCase();
                    const type = row.cells[1].textContent.toLowerCase();
                    const description = row.cells[2].textContent.toLowerCase();

                    const matchesSearch = date.includes(search) || type.includes(search) || description.includes(search);
                    const matchesType = (typeFilter === 'all') || (row.cells[1].textContent === typeFilter);

                    row.style.display = (matchesSearch && matchesType) ? '' : 'none';
                });

                sortTableByDate();
            }

            function sortTableByDate() {
                const rows = Array.from(table.rows)
                    .filter(row => row.style.display !== 'none');

                rows.sort((a, b) => {
                    const dateA = new Date(a.cells[0].textContent);
                    const dateB = new Date(b.cells[0].textContent);
                    return sortDirection === 'asc' ? dateA - dateB : dateB - dateA;
                });

                rows.forEach(row => table.appendChild(row));
            }

            document.querySelector('th').addEventListener('click', function() {
                sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                sortTableByDate();
                
                const icon = this.querySelector('i');
                icon.className = sortDirection === 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down';
            });

            searchInput.addEventListener('input', filterTransactions);
            filterType.addEventListener('change', filterTransactions);

            sortTableByDate();

            // Tooltip initialization
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

