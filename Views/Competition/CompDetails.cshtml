    drawTab.addEventListener('show.bs.tab', function (event) {
        if (drawContainer && !drawLoaded) {
            drawLoaded = true;
            
            console.log('Loading draw visual...');
            
            drawContainer.innerHTML = `
                <div class="text-center p-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading Draw...</span>
                    </div>
                    <p class="mt-2">Loading Draw...</p>
                </div>
            `;
            
            fetch('/Draw/ViewPublishedDraw/@Model.ScheduleId')
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        throw new Error('HTTP ' + response.status + ': ' + response.statusText);
                    }
                    return response.text();
                })
                .then(html => {
                    console.log('HTML received, length:', html.length);
                    
                    // Insert the HTML
                    drawContainer.innerHTML = html;
                    
                    // *** KEY FIX: Manually execute scripts ***
                    var scripts = drawContainer.querySelectorAll('script');
                    console.log('Found ' + scripts.length + ' script tags to execute');
                    
                    scripts.forEach(function(oldScript) {
                        var newScript = document.createElement('script');
                        
                        // Copy attributes
                        Array.from(oldScript.attributes).forEach(function(attr) {
                            newScript.setAttribute(attr.name, attr.value);
                        });
                        
                        // Copy script content
                        newScript.textContent = oldScript.textContent;
                        
                        // Replace old script with new one (this causes execution)
                        oldScript.parentNode.replaceChild(newScript, oldScript);
                        
                        console.log('Script executed');
                    });
                    
                    // Give scripts time to set global variables
                    setTimeout(function() {
                        console.log('Checking for bracket data...');
                        console.log('publishedBracketDataReady:', window.publishedBracketDataReady);
                        console.log('publishedBracketData:', window.publishedBracketData);
                        
                        if (window.publishedBracketDataReady && window.publishedBracketData) {
                            console.log('Initializing bracket with data:', window.publishedBracketData);
                            
                            try {
                                // Make sure jQuery and bracket plugin are loaded
                                if (typeof $ === 'undefined') {
                                    throw new Error('jQuery is not loaded');
                                }
                                
                                if (typeof $.fn.bracket === 'undefined') {
                                    throw new Error('jQuery Bracket plugin is not loaded');
                                }
                                
                                var bracketElement = $('#bracketVisual_Published');
                                if (bracketElement.length === 0) {
                                    throw new Error('Bracket container #bracketVisual_Published not found');
                                }
                                
                                console.log('Initializing bracket...');
                                
                                bracketElement.bracket({
                                    init: window.publishedBracketData.bracketData,
                                    teamWidth: 170,
                                    scoreWidth: 30,
                                    roundMargin: 40,
                                    skipConsolationRound: !window.publishedBracketData.hasThirdPlaceMatch
                                });

                                // Add round headers
                                $('#bracketVisual_Published .round').each(function(index) {
                                    var headers = window.publishedBracketData.roundHeaders;
                                    if (headers && headers[index]) {
                                        if ($(this).find('.round-header').length === 0) {
                                            $(this).prepend('<div class="round-header">' + headers[index] + '</div>');
                                        }
                                    }
                                });
                                
                                console.log('Bracket initialized successfully!');
                                
                                // Clean up
                                window.publishedBracketDataReady = false;
                                
                            } catch (e) {
                                console.error('Error initializing bracket:', e);
                                console.error('Stack:', e.stack);
                                drawContainer.innerHTML = `
                                    <div class="alert alert-danger">
                                        <strong>Error:</strong> Could not initialize bracket visualization.
                                        <br><small>${e.message}</small>
                                        <br><br>
                                        <button class="btn btn-sm btn-primary" onclick="location.reload()">Reload Page</button>
                                    </div>
                                `;
                            }
                        } else if (window.publishedBracketDataReady === false && !window.publishedBracketData) {
                            // Pool Play format - data is already displayed, no bracket needed
                            console.log('Pool Play format detected - no bracket initialization needed');
                        } else {
                            console.error('Bracket data not ready');
                            console.log('Full window object keys:', Object.keys(window));
                            drawContainer.innerHTML = `
                                <div class="alert alert-warning">
                                    <strong>Warning:</strong> Draw data is not available.
                                    <br><small>publishedBracketDataReady: ${window.publishedBracketDataReady}</small>
                                    <br><small>publishedBracketData exists: ${!!window.publishedBracketData}</small>
                                    <br><br>
                                    <button class="btn btn-sm btn-primary" onclick="location.reload()">Reload Page</button>
                                </div>
                            `;
                        }
                    }, 100);
                })
                .catch(error => {
                    console.error('Failed to load draw visual:', error);
                    drawContainer.innerHTML = `
                        <div class="alert alert-danger">
                            <strong>Error:</strong> Could not load the draw.
                            <br><small>${error.message}</small>
                            <br><br>
                            <button class="btn btn-sm btn-primary" onclick="location.reload()">Reload Page</button>
                        </div>
                    `;
                });
        }
