@model PicklePlay.Models.ViewModels.RRStandingsViewModel
@using PicklePlay.Models

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Round Robin Standings</h5>
            <small class="text-muted">Latest standings from completed matches</small>
        </div>
        <div>
            <span class="badge bg-primary">Updated: @DateTime.Now.ToString("g")</span>
        </div>
    </div>

    <div class="card-body">
        @if (Model.Standings == null || !Model.Standings.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-clipboard-data fs-1 mb-2"></i>
                <div>No standings available yet.</div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover table-bordered align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:48px;">Position</th>
                            <th>Team</th>
                            <th class="text-end">Matches Played</th>
                            <th class="text-end">Wins</th>
                            <th class="text-end">Losses</th>
                            <th class="text-end">Games Won</th>
                            <th class="text-end">Games Lost</th>
                            <th class="text-end">Score Difference</th>
                            <th style="width:160px;">Win Percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var rank = 1;
                            foreach (var s in Model.Standings)
                            {
                                // compute win percentage defensively
                                var mp = s.GamesPlayed;
                                double winPct = mp > 0 ? (double)s.MatchesWon / mp * 100.0 : 0.0;
                                string rowClass = rank == 1 ? "table-warning" : rank == 2 ? "table-secondary" : rank == 3 ? "table-secondary" : "";
                        }
                        }
                        @{
                            rank = 1;
                            foreach (var s in Model.Standings)
                            {
                                var mp = s.GamesPlayed;
                                double winPct = mp > 0 ? (double)s.MatchesWon / mp * 100.0 : 0.0;
                                var highlightClass = rank == 1 ? "table-warning" : rank == 2 ? "table-light" : rank == 3 ? "table-secondary" : "";
                        <tr class="@highlightClass">
                            <td>
                                <strong>@rank</strong>
                                @if (rank == 1) { <span class="badge bg-warning text-dark ms-2" title="Champion">Champion</span> }
                                else if (rank == 2) { <span class="badge bg-secondary ms-2" title="First Runner-up">1st Runner-up</span> }
                                else if (rank == 3) { <span class="badge bg-dark text-white ms-2" title="Second Runner-up">2nd Runner-up</span> }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @* optional team logo if provided in model *@
                                    @if (!string.IsNullOrEmpty(s.TeamIconUrl))
                                    {
                                        <img src="@s.TeamIconUrl" alt="@s.TeamName" class="rounded-circle me-2" style="width:34px;height:34px;object-fit:cover;" />
                                    }
                                    <div>
                                        <div class="fw-semibold">@s.TeamName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end">@s.GamesPlayed</td>
                            <td class="text-end">@s.MatchesWon</td>
                            <td class="text-end">@s.MatchesLost</td>
                            <td class="text-end">@s.GamesWon</td>
                            <td class="text-end">@s.GamesLost</td>
                            <td class="text-end">@s.ScoreDifference</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="progress flex-fill me-2" style="height:10px;">
                                        <div class="progress-bar" role="progressbar" style="width:@(winPct.ToString("0.##"))%;" aria-valuenow="@(winPct.ToString("0"))" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted">@winPct.ToString("0.#")% </small>
                                </div>
                            </td>
                        </tr>
                                rank++;
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <small class="text-muted">Sorting: Matches Won, then Games Won, then fewer Games Lost, then higher Score Difference.</small>
            </div>
        }
    </div>
</div>