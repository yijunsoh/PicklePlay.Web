@model PicklePlay.Models.ViewModels.ManageTeamViewModel
@using PicklePlay.Models
@{
    ViewData["Title"] = "Manage Teams";
    bool isFull = (Model.ConfirmedTeams?.Count ?? 0) >= Model.MaxTeams;
}

<style>
    .team-member-list { list-style-type: none; padding-left: 0; }
    .team-member-list li { 
        display: flex; 
        justify-content: space-between; align-items: center; 
        padding: 5px; 
        border-bottom: 1px solid #eee; 
    }
    .team-member-list li:last-child { border-bottom: 0; }
    .captain-icon { color: #ffc107; }
</style>

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2>@ViewData["Title"]</h2>
            <h5 class="text-muted">@Model.CompetitionName</h5>
        </div>
        <a asp-action="CompDetails" asp-controller="Competition" asp-route-id="@Model.ScheduleId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Competition
        </a>
    </div>

    <ul class="nav nav-tabs" id="teamTabs" role="tablist">
        @* 1. ON HOLD TAB (Active by default) *@
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="onhold-tab" data-bs-toggle="tab" data-bs-target="#onhold-pane" type="button" role="tab" aria-controls="onhold-pane" aria-selected="true">
                On Hold (@(Model.OnHoldTeams?.Count ?? 0))
            </button>
        </li>
        @* ⬇️ HIDE PENDING TAB IF FREE *@
    @if (!Model.IsFreeCompetition)
    {
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-pane" type="button" role="tab" aria-controls="pending-pane" aria-selected="false">
                Pending Payment (@(Model.PendingTeams?.Count ?? 0))
            </button>
        </li>
    }
        @* 3. CONFIRMED TAB *@
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="confirmed-tab" data-bs-toggle="tab" data-bs-target="#confirmed-pane" type="button" role="tab" aria-controls="confirmed-pane" aria-selected="false">
                Confirmed (@(Model.ConfirmedTeams?.Count ?? 0))
            </button>
        </li>
    </ul>

    <div class="tab-content" id="teamTabsContent">
        
        @* --- ON HOLD PANE (Accept/Decline here) --- *@
        <div class="tab-pane fade show active" id="onhold-pane" role="tabpanel" aria-labelledby="onhold-tab" tabindex="0">
            
            @* FIX: Define the bulk form separately (do not wrap the cards) *@
            <form asp-action="BulkAcceptTeams" asp-controller="ManageTeam" method="post" id="bulkAcceptForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />
            </form>

            @if (Model.IsOrganizer && (Model.OnHoldTeams?.Any() ?? false))
            {
                <div class="card my-3 bg-light">
                    <div class="card-body d-flex align-items-center">
                        @if (isFull)
                        {
                            <button type="button" class="btn btn-sm btn-secondary" disabled title="Competition is full">
                                <i class="bi bi-lock-fill"></i> Competition Full
                            </button>
                        }
                        else
                        {
                            <button type="submit" form="bulkAcceptForm" class="btn btn-sm btn-success">
                                <i class="bi bi-check-all"></i> Accept Selected
                            </button>
                        }
                    </div>
                </div>
            }

            @if (!(Model.OnHoldTeams?.Any() ?? false))
            {
                <p class="text-muted p-3">No teams are on hold.</p>
            }
            
            @foreach (var team in Model.OnHoldTeams ?? new List<Team>())
            {
                <div class="card mb-3 border-secondary">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            @if (Model.IsOrganizer)
                            {
                                @* FIX: Link checkbox to the bulk form *@
                                <input class="form-check-input me-3" type="checkbox" name="teamIds" value="@team.TeamId" form="bulkAcceptForm">
                            }
                            <img src="@(string.IsNullOrEmpty(team.TeamIconUrl) ? "/images/team_icon.png" : team.TeamIconUrl)" alt="icon" style="width: 30px; height: 30px; border-radius: 50%;" />
                            <h5 class="mb-0 ms-2">@team.TeamName</h5>
                        </div>
                        <span class="badge bg-secondary">Awaiting Approval</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Members</h6>
                                <ul class="team-member-list">
                                    @foreach (var member in team.TeamMembers)
                                    {
                                        <li>
                                            <div>
                                                @if (member.UserId == team.CreatedByUserId)
                                                {
                                                    <i class="bi bi-star-fill captain-icon" title="Captain"></i>
                                                }
                                                @member.User.Username
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="col-md-6 text-end">
    @if (Model.IsOrganizer)
    {
        <div class="btn-group">
            @* ⬇️ DYNAMIC ACCEPT BUTTON *@
            @if (isFull)
                                        {
                                            <button class="btn btn-sm btn-secondary" disabled>
                                                <i class="bi bi-lock-fill"></i> Full
                                            </button>
                                        }
                                        else
                                        {
                                            <form asp-action="UpdateTeamStatus" asp-controller="ManageTeam" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="teamId" value="@team.TeamId" />
                                                
                                                @* Dynamic Status Logic *@
                                                <input type="hidden" name="newStatus" value="@(Model.IsFreeCompetition ? TeamStatus.Confirmed : TeamStatus.Pending)" />
                                                
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-check-lg"></i> @(Model.IsFreeCompetition ? "Accept & Confirm" : "Accept")
                                                </button>
                                            </form>
                                        }

            @* Decline Button (Unchanged) *@
            <form asp-action="UpdateTeamStatus" asp-controller="ManageTeam" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="teamId" value="@team.TeamId" />
                <input type="hidden" name="newStatus" value="@TeamStatus.Cancelled" />
                <button type="submit" class="btn btn-sm btn-danger">
                    <i class="bi bi-x-lg"></i> Decline
                </button>
            </form>
        </div>
    }
</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* --- PENDING PANE (Move back to OnHold) --- *@
        <div class="tab-pane fade" id="pending-pane" role="tabpanel" aria-labelledby="pending-tab" tabindex="0">
            @if (!(Model.PendingTeams?.Any() ?? false))
            {
                <p class="text-muted p-3">No teams are pending payment.</p>
            }
            
            @foreach (var team in Model.PendingTeams ?? new List<Team>())
            {
                <div class="card mb-3 border-warning">
                    <div class="card-header d-flex justify-content-between align-items-center bg-warning bg-opacity-10">
                        <div class="d-flex align-items-center">
                            <img src="@(string.IsNullOrEmpty(team.TeamIconUrl) ? "/images/team_icon.png" : team.TeamIconUrl)" alt="icon" style="width: 30px; height: 30px; border-radius: 50%;" />
                            <h5 class="mb-0 ms-2">@team.TeamName</h5>
                        </div>
                        <span class="badge bg-warning text-dark">Pending Payment</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Members</h6>
                                <ul class="team-member-list">
                                    @foreach (var member in team.TeamMembers)
                                    {
                                        <li>
                                            <div>
                                                @if (member.UserId == team.CreatedByUserId)
                                                {
                                                    <i class="bi bi-star-fill captain-icon" title="Captain"></i>
                                                }
                                                @member.User.Username
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="col-md-6 text-end">
                                @if (Model.IsOrganizer)
                                {
                                    @* Move back to On Hold *@
                                    <form asp-action="UpdateTeamStatus" asp-controller="ManageTeam" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="teamId" value="@team.TeamId" />
                                        <input type="hidden" name="newStatus" value="@TeamStatus.Onhold" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-arrow-counterclockwise"></i> Move back to On Hold
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* --- CONFIRMED PANE --- *@
        <div class="tab-pane fade" id="confirmed-pane" role="tabpanel" aria-labelledby="confirmed-tab" tabindex="0">
            @if (!(Model.ConfirmedTeams?.Any() ?? false))
            {
                <p class="text-muted p-3">No teams are confirmed.</p>
            }
            
            @foreach (var team in Model.ConfirmedTeams ?? new List<Team>())
            {
                <div class="card mb-3 border-success">
                    <div class="card-header d-flex justify-content-between align-items-center bg-success bg-opacity-10">
                        <div class="d-flex align-items-center">
                            <img src="@(string.IsNullOrEmpty(team.TeamIconUrl) ? "/images/team_icon.png" : team.TeamIconUrl)" alt="icon" style="width: 30px; height: 30px; border-radius: 50%;" />
                            <h5 class="mb-0 ms-2">@team.TeamName</h5>
                        </div>
                        <span class="badge bg-success">Confirmed</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Members</h6>
                                <ul class="team-member-list">
                                    @foreach (var member in team.TeamMembers)
                                    {
                                        <li>
                                            <div>
                                                @if (member.UserId == team.CreatedByUserId)
                                                {
                                                    <i class="bi bi-star-fill captain-icon" title="Captain"></i>
                                                }
                                                @member.User.Username
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="col-md-6 text-end">
    @if (Model.IsOrganizer)
    {
        <form asp-action="UpdateTeamStatus" asp-controller="ManageTeam" method="post" class="d-inline" 
              onsubmit="return confirm('Move @team.TeamName back to On Hold status?')">
            @Html.AntiForgeryToken()
            <input type="hidden" name="teamId" value="@team.TeamId" />
            
            @* ⬇️ CHANGED: Value is now Onhold *@
            <input type="hidden" name="newStatus" value="@TeamStatus.Onhold" />
            
            <button type="submit" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-counterclockwise"></i> Move back to On Hold
            </button>
        </form>
    }
</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var checkAll = document.getElementById('checkAllOnHold');
            if (checkAll) {
                checkAll.addEventListener('change', function() {
                    // Select checkboxes in the OnHold pane
                    var checkboxes = document.querySelectorAll('#onhold-pane input[name="teamIds"]');
                    for (var cb of checkboxes) {
                        cb.checked = this.checked;
                    }
                });
            }
        });
    </script>
}