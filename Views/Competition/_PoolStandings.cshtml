@model PoolPlayStandingsViewModel
@using PicklePlay.Models
@using PicklePlay.Models.ViewModels

<style>
    .standing-table {
        font-size: 0.9rem;
    }
    .standing-table th {
        background-color: #f8f9fa;
        font-weight: 600;
        text-align: center;
        vertical-align: middle;
    }
    .standing-table td {
        text-align: center;
        vertical-align: middle;
    }
    .team-advancing {
        background-color: #d1e7dd !important;
        font-weight: 600;
    }
    .pool-container {
        margin-bottom: 2rem;
    }
    .point-system-card {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 1rem;
    }
</style>

@if (!Model.PoolGroups.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        No pool standings available. Matches haven't been generated yet.
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Pool Stage Standings:</strong> Top @Model.Competition!.WinnersPerPool team(s) from each pool will advance to the playoff stage.
        @if (Model.IsPoolStageComplete)
        {
            <span class="badge bg-success ms-2">Pool Stage Complete</span>
        }
        else
        {
            <span class="badge bg-warning text-dark ms-2">In Progress</span>
        }
    </div>

    @foreach (var poolGroup in Model.PoolGroups)
    {
        <div class="pool-container">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5>@poolGroup.PoolName</h5>
                @if (poolGroup.IsComplete)
                {
                    <span class="badge bg-success">Complete</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">In Progress</span>
                }
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover standing-table">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th style="text-align: left;">Team</th>
                            @if (Model.CalculationMethod == StandingCalculation.WinLossPoints)
                            {
                                <th>Points</th>
                            }
                            <th>Played</th>
                            <th>Wins</th>
                            <th>Loss</th>
                            @if (Model.CalculationMethod == StandingCalculation.WinLossPoints)
                            {
                                <th>Draws</th>
                            }
                            @if (Model.CalculationMethod == StandingCalculation.GameWinPercentage || 
                                 Model.CalculationMethod == StandingCalculation.GamesWon)
                            {
                                <th>Games Won</th>
                                <th>Games Lost</th>
                            }
                            @if (Model.CalculationMethod == StandingCalculation.PointDifferential)
                            {
                                <th>Total Score</th>
                            }
                            <th>Score Diff</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < poolGroup.Standings.Count; i++)
                        {
                            var standing = poolGroup.Standings[i];
                            var isAdvancing = i < poolGroup.AdvancingTeams;
                            
                            <tr class="@(isAdvancing ? "team-advancing" : "")">
                                <td>
                                    @(i + 1)
                                    @if (isAdvancing)
                                    {
                                        <i class="bi bi-arrow-up-circle-fill text-success ms-1"></i>
                                    }
                                </td>
                                <td style="text-align: left; font-weight: 500;">
                                    @standing.TeamName
                                </td>
                                @if (Model.CalculationMethod == StandingCalculation.WinLossPoints)
                                {
                                    <td><strong>@standing.Points</strong></td>
                                }
                                <td>@standing.GamesPlayed</td>
                                <td class="text-success"><strong>@standing.MatchesWon</strong></td>
                                <td class="text-danger">@standing.MatchesLost</td>
                                @if (Model.CalculationMethod == StandingCalculation.WinLossPoints)
                                {
                                    <td>@standing.Draws</td>
                                }
                                @if (Model.CalculationMethod == StandingCalculation.GameWinPercentage || 
                                     Model.CalculationMethod == StandingCalculation.GamesWon)
                                {
                                    <td>@standing.GamesWon</td>
                                    <td>@standing.GamesLost</td>
                                }
                                @if (Model.CalculationMethod == StandingCalculation.PointDifferential)
                                {
                                    <td><strong>@standing.TotalScore</strong></td>
                                }
                                <td class="@(standing.ScoreDifference >= 0 ? "text-success" : "text-danger")">
                                    @(standing.ScoreDifference >= 0 ? "+" : "")@standing.ScoreDifference
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @* Point System Info (for WinLossPoints only) *@
    @if (Model.CalculationMethod == StandingCalculation.WinLossPoints && Model.Competition != null)
    {
        <div class="card">
            <div class="card-header" style="cursor: pointer;" 
                 data-bs-toggle="collapse" 
                 data-bs-target="#pointSystemCollapse" 
                 aria-expanded="false">
                <h6 class="mb-0">
                    <i class="bi bi-calculator me-2"></i>Point System
                    <i class="bi bi-chevron-down float-end"></i>
                </h6>
            </div>
            <div class="collapse" id="pointSystemCollapse">
                <div class="card-body point-system-card">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Standard Win:</strong> @Model.Competition.StandardWin pts</p>
                            <p class="mb-1"><strong>Standard Loss:</strong> @Model.Competition.StandardLoss pts</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Tie-Break Win:</strong> @Model.Competition.TieBreakWin pts</p>
                            <p class="mb-1"><strong>Tie-Break Loss:</strong> @Model.Competition.TieBreakLoss pts</p>
                            <p class="mb-1"><strong>Draw:</strong> @Model.Competition.Draw pts</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}