@section Scripts {
    <script>
        // Helper function to safely escape HTML content to prevent XSS and JS SyntaxErrors
        function escapeHtml(unsafe) {
            if (!unsafe) return '';
            return unsafe.toString()
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // Storage for data fetched from server 
        let fetchedData = {
            pendingRequests: [],
            rejectedRequests: [],
            activeCommunities: [],
            suggestedCommunities: []
        };

        // Helper to retrieve the Anti-Forgery Token
        function getAntiForgeryToken() {
            const tokenInput = document.querySelector('#createCommunityForm input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : '';
        }

        // Privacy option selection
        document.querySelectorAll('.privacy-option').forEach(option => {
            option.addEventListener('click', function () {
                document.querySelectorAll('.privacy-option').forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                document.getElementById('communityType').value = this.getAttribute('data-type');
            });
        });

        // Helper function to render a card for a pending request
        function renderPendingRequestCard(req) {
            const safeName = escapeHtml(req.name);
            const safeLocation = escapeHtml(req.location);

            return `
                    <div class="community-card" id="pending-request-${req.requestId}" data-community-id="${req.requestId}">
                        <span class="community-badge badge-pending">PENDING</span>
                        <div class="community-header">
                            <div class="community-icon" style="background: #FFD700;">
                                <i class="fas fa-hourglass-half" style="color:#333"></i>
                            </div>
                            <h3 class="community-name">${safeName} (Reviewing)</h3>
                            <p class="community-description">Your request is currently awaiting admin approval. Please check back later!</p>
                            <div class="community-meta">
                                <div class="community-stats">
                                    <div class="stat">
                                        <i class="fas fa-lock"></i>
                                        <span>${req.type}</span>
                                    </div>
                                </div>
                                <div class="community-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>${safeLocation || 'Location Pending'}</span>
                                </div>
                            </div>
                        </div>
                        <div class="community-actions">
                            <button class="btn-primary-custom" disabled>
                                <i class="fas fa-clock me-2"></i>Awaiting Approval
                            </button>
                        </div>
                    </div>
                `;
        }

        // Helper function to render a card for a rejected request
        function renderRejectedRequestCard(req) {
            const safeName = escapeHtml(req.name);
            const safeLocation = escapeHtml(req.location);

            return `
                    <div class="community-card" id="rejected-request-${req.requestId}" data-community-id="${req.requestId}">
                        <span class="community-badge" style="background: #EF4444; color: white;">REJECTED</span>
                        <div class="community-header">
                            <div class="community-icon" style="background: #EF4444;">
                                <i class="fas fa-times-circle" style="color:white"></i>
                            </div>
                            <h3 class="community-name">${safeName} (Rejected)</h3>
                            <p class="community-description">Your request to join this community was rejected by the admin.</p>
                            <div class="community-meta">
                                <div class="community-stats">
                                    <div class="stat">
                                        <i class="fas fa-lock"></i>
                                        <span>${req.type}</span>
                                    </div>
                                </div>
                                <div class="community-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>${safeLocation || 'Location Unknown'}</span>
                                </div>
                            </div>
                        </div>
                        <div class="community-actions">
                            <button class="btn-primary-custom" onclick="removeRejectedRequest(${req.requestId})">
                                <i class="fas fa-trash me-2"></i>Remove
                            </button>
                            <button class="btn-secondary-custom" onclick="reapplyToCommunity(${req.requestId})">
                                <i class="fas fa-redo me-2"></i>Re-apply
                            </button>
                        </div>
                    </div>
                `;
        }

        // Render community cards (uses data structure from the API)
        function renderCommunityCard(community, isSuggested = false) {
            const role = community.userRole || 'Member';
            const badgeType = role.toLowerCase() === 'admin' ?
                'badge-admin' :
                role.toLowerCase() === 'member' ?
                    'badge-member' :
                    isSuggested ?
                        'badge-suggested' : community.type.toLowerCase() === 'public' ? 'badge-public' : 'badge-private';

            const badgeText = role === 'Admin' ? 'Admin' : role;
            const iconClass = community.icon ? `fas fa-${community.icon}` : 'fas fa-users';

            const safeName = escapeHtml(community.name);
            const safeDescription = escapeHtml(community.description);
            const safeLocation = escapeHtml(community.location);

            // Determine action buttons based on user role and community type
            const actionButtons = community.userRole === 'Admin'
                ? `
                    <button class="btn-primary-custom" onclick="enterCommunity(${community.id})">
                        <i class="fas fa-door-open me-2"></i>Enter Community
                    </button>
                    <button class="btn-secondary-custom" onclick="manageCommunity(${community.id})">
                        <i class="fas fa-cog me-2"></i>Manage
                    </button>
                  `
                : community.userRole === 'Member'
                ? `
                    <button class="btn-primary-custom" onclick="enterCommunity(${community.id})">
                        <i class="fas fa-door-open me-2"></i>Enter Community
                    </button>
                    <button class="btn-danger-custom" onclick="leaveCommunity(${community.id})">
                        <i class="fas fa-sign-out-alt me-2"></i>Leave
                    </button>
                `
                : community.type === 'Private'
                ? `
                    <button class="btn-primary-custom" onclick="joinCommunity(${community.id})">
                        <i class="fas fa-user-clock me-2"></i>Request to Join
                    </button>
                    <button class="btn-secondary-custom" onclick="viewCommunityDetails(${community.id})">
                        <i class="fas fa-info me-2"></i>Details
                    </button>
                `
                : `
                    <button class="btn-primary-custom" onclick="joinCommunity(${community.id})">
                        <i class="fas fa-user-plus me-2"></i>Join
                    </button>
                    <button class="btn-secondary-custom" onclick="viewCommunityDetails(${community.id})">
                        <i class="fas fa-info me-2"></i>Details
                    </button>
                `;

            return `
                    <div class="community-card" data-community-id="${community.id}">
                        <span class="community-badge ${badgeType}">${badgeText}</span>
                        <div class="community-header">
                            <div class="community-icon">
                                <i class="${iconClass}"></i>
                            </div>
                            <h3 class="community-name">${safeName}</h3>
                            <p class="community-description">${safeDescription || 'No description provided.'}</p>
                            <div class="community-meta">
                                <div class="community-stats">
                                    <div class="stat">
                                        <i class="fas fa-users"></i>
                                        <span>${community.memberCount || 0} Members</span>
                                    </div>
                                    <div class="stat">
                                        <i class="fas fa-calendar"></i>
                                        <span>${community.gameCount || 0} Games</span>
                                    </div>
                                </div>
                                <div class="community-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>${safeLocation || 'Location Unknown'}</span>
                                </div>
                            </div>
