@{
    ViewData["Title"] = "Communities - PicklePlay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --primary-light: #4CAF78;
            --secondary: #FF6B35;
            --accent: #1E5B32;
            --dark: #2D3748;
            --gradient: linear-gradient(135deg, #2E8B57 0%, #1E5B32 100%);
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --hover-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        body {
            background: linear-gradient(135deg, #f0f9f4 0%, #e3f2e9 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        .hero-section {
            background: var(--gradient);
            color: white;
            padding: 60px 0 40px;
        }

        .main-content {
            margin-top: -30px;
        }

        .stats-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 20px;
            text-align: center;
            box-shadow: var(--card-shadow);
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--gradient);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 1.5rem;
            color: white;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 5px;
        }

        .stat-label {
            color: var(--dark);
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .section-header {
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(46, 139, 87, 0.1);
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 800;
            color: var(--dark);
            margin: 0 0 5px 0;
        }

        .section-title i {
            color: var(--primary);
            margin-right: 10px;
        }

        .communities-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
            margin-bottom: 50px;
        }

        .community-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            border: 1px solid rgba(46, 139, 87, 0.1);
            position: relative;
        }

        .community-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--hover-shadow);
        }

        .community-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            z-index: 2;
        }

        .badge-owner { background: var(--primary); color: white; }
        .badge-member { background: #10B981; color: white; }
        .badge-suggested { background: #F59E0B; color: white; }

        .community-header {
            padding: 25px 25px 15px;
        }

        .community-icon {
            width: 70px;
            height: 70px;
            background: var(--gradient);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            margin-bottom: 15px;
        }

        .community-name {
            font-size: 1.3rem;
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 8px;
            line-height: 1.3;
        }

        .community-description {
            color: #6B7280;
            font-size: 0.9rem;
            line-height: 1.5;
            margin-bottom: 15px;
        }

        .community-stats {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .stat {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #6B7280;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .stat i {
            color: var(--primary);
        }

        .community-actions {
            padding: 0 25px 25px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .btn-primary-custom {
            background: var(--gradient);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.3s ease;
            flex: 1;
            min-width: 120px;
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(46, 139, 87, 0.3);
            color: white;
        }

        .btn-secondary-custom {
            background: transparent;
            border: 2px solid var(--primary);
            color: var(--primary);
            padding: 8px 18px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.3s ease;
            flex: 1;
            min-width: 120px;
        }

        .btn-secondary-custom:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
        }

        .btn-danger-custom {
            background: transparent;
            border: 2px solid #EF4444;
            color: #EF4444;
            padding: 8px 18px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.3s ease;
            flex: 1;
            min-width: 120px;
        }

        .btn-danger-custom:hover {
            background: #EF4444;
            color: white;
            transform: translateY(-2px);
        }

        .create-fab {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 70px;
            height: 70px;
            background: var(--secondary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
