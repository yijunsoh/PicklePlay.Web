        // Load communities (Updated to fetch data from API)
        async function loadCommunities() {
            const myCommunitiesGrid = document.getElementById('myCommunitiesGrid');
            const suggestedCommunitiesGrid = document.getElementById('suggestedCommunitiesGrid');

            // --- Fetch Data ---
            try {
                const response = await fetch('/Communities/GetCommunityData');
                if (response.ok) {
                    const data = await response.json();
                    fetchedData.pendingRequests = data.pendingRequests || [];
                    fetchedData.rejectedRequests = data.rejectedRequests || [];
                    fetchedData.activeCommunities = data.activeCommunities || [];
                    fetchedData.suggestedCommunities = data.suggestedCommunities || [];
                } else {
                    console.error("API Fetch Failed:", response.status, response.statusText);
                }
            } catch (error) {
                console.error("Network Error on GetCommunityData:", error);
            }

            const { pendingRequests, rejectedRequests, activeCommunities, suggestedCommunities } = fetchedData;
            
            // --- Update Stats ---
            const totalActive = activeCommunities.length;
            const totalSuggested = suggestedCommunities.length;
            const totalMy = totalActive + pendingRequests.length;
            const totalMembers = activeCommunities.reduce((sum, comm) => sum + (comm.memberCount || 0), 0);

            document.getElementById('totalCommunities').textContent = totalActive + totalSuggested;
            document.getElementById('myCommunities').textContent = totalMy;
            document.getElementById('totalMembers').textContent = totalMembers;
            document.getElementById('recentActivities').textContent = 0;
            document.getElementById('totalCommunitiesCount').textContent = (totalActive + totalSuggested) + '+';

            // --- Render My Communities (Pending + Rejected + Active) ---
            let myCommunitiesHtml = '';
            
            // 1. Render Pending Requests
            if (pendingRequests.length > 0) {
                myCommunitiesHtml += pendingRequests.map(req => renderPendingRequestCard(req)).join('');
            }

            // 2. Render Rejected Requests
            if (rejectedRequests.length > 0) {
                myCommunitiesHtml += rejectedRequests.map(req => renderRejectedRequestCard(req)).join('');
            }

            // 3. Render Active Communities
            if (activeCommunities.length > 0) {
                myCommunitiesHtml += activeCommunities.map(community => renderCommunityCard(community, false)).join('');
            }

            // 4. Update Grid
            if (myCommunitiesHtml.length > 0) {
                myCommunitiesGrid.innerHTML = myCommunitiesHtml;
            } else {
                // Show empty state if no active or pending communities
                const emptyStateHtml = document.getElementById('myCommunitiesEmptyState') ?
                    document.getElementById('myCommunitiesEmptyState').outerHTML :
                    '<div class="empty-state">... (Default empty state fallback) ...</div>';
                myCommunitiesGrid.innerHTML = emptyStateHtml;
            }

            // --- Render Suggested Communities ---
            if (suggestedCommunities.length > 0) {
                suggestedCommunitiesGrid.innerHTML = suggestedCommunities.map(community => 
                    renderCommunityCard(community, true)
                ).join('');
            } else {
                // Show default empty state for suggestions
                suggestedCommunitiesGrid.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-search"></i>
                            <h4>Finding Communities for You</h4>
                            <p>We're looking for communities that match your profile...</p>
                        </div>`;
            }
        }

        // Function to remove rejected request
        async function removeRejectedRequest(requestId) {
            if (!confirm('Are you sure you want to remove this rejected request?')) {
                return;
            }

            try {
                const formData = new FormData();
                formData.append('requestId', requestId);
                formData.append('__RequestVerificationToken', getAntiForgeryToken());

                const response = await fetch('/Communities/RemoveRejectedRequest', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    // Remove from local data and reload
                    fetchedData.rejectedRequests = fetchedData.rejectedRequests.filter(req => req.requestId !== requestId);
                    await loadCommunities();
                } else {
                    alert('Error: ' + (data.message || 'Failed to remove request.'));
                }
            } catch (error) {
                console.error('Remove Error:', error);
                alert('A network error occurred while removing the request.');
            }
        }

