@section Scripts {
    <script>
        let currentPlayerPage = 1;
        let currentSearchTerm = '';
        let currentFilter = '';
        let currentGender = 'all';

        // Load initial data when page loads
        document.addEventListener('DOMContentLoaded', function () {
            loadInitialPlayers(1);
            
            // Set up tab change events
            document.getElementById('players-tab').addEventListener('click', function() {
                loadInitialPlayers(1);
            });
        });

        // Function to load initial players
        function loadInitialPlayers(page = 1) {
            showLoading('playerLoading');
            currentPlayerPage = page;
            currentSearchTerm = '';
            currentFilter = '';
            currentGender = 'all';
            
            // Reset form fields
            document.getElementById('playerSearch').value = '';
            document.getElementById('playerFilter').value = '';
            document.getElementById('playerGender').value = 'all';
            
            fetch(`/Search/GetInitialPlayers?page=${page}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(html => {
                    document.getElementById('playersResults').innerHTML = html;
                    updatePlayerDisplayInfo();
                    updatePaginationInfo();
                    hideLoading('playerLoading');
                    initializeFavoriteButtons();
                })
                .catch(error => {
                    console.error('Error loading players:', error);
                    hideLoading('playerLoading');
                    showError('playersResults', 'Error loading players. Please try again.');
                });
        }

        // Search function
        function searchPlayers(page = 1) {
            const searchTerm = document.getElementById('playerSearch').value;
            const filter = document.getElementById('playerFilter').value;
            const gender = document.getElementById('playerGender').value;
            
            currentSearchTerm = searchTerm;
            currentFilter = filter;
            currentGender = gender;
            currentPlayerPage = page;
            
            showLoading('playerLoading');
            
            fetch(`/Search/GetPlayers?searchTerm=${encodeURIComponent(searchTerm)}&filter=${encodeURIComponent(filter)}&gender=${encodeURIComponent(gender)}&page=${page}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(html => {
                    document.getElementById('playersResults').innerHTML = html;
                    updatePlayerDisplayInfo();
                    updatePaginationInfo(searchTerm, filter, gender);
                    hideLoading('playerLoading');
                    initializeFavoriteButtons();
                })
                .catch(error => {
                    console.error('Error searching players:', error);
                    hideLoading('playerLoading');
                });
        }

        // Update player display info with clearer wording
        function updatePlayerDisplayInfo() {
            const count = document.querySelectorAll('#playersResults .result-card').length;
            const countElement = document.getElementById('playerCount');
            if (countElement) {
                if (currentSearchTerm || currentFilter !== '' || currentGender !== 'all') {
                    countElement.textContent = `Page ${currentPlayerPage} - Showing ${count} players (Filtered)`;
                } else {
                    countElement.textContent = `Page ${currentPlayerPage} - Showing ${count} players`;
                }
            }
        }

        // Function to update pagination information
        function updatePaginationInfo(searchTerm = '', filter = '', gender = 'all') {
            fetch(`/Search/GetPlayerCount?searchTerm=${encodeURIComponent(searchTerm)}&filter=${encodeURIComponent(filter)}&gender=${encodeURIComponent(gender)}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    createPaginationControls(data.totalPages, data.totalCount);
                })
                .catch(error => {
                    console.error('Error getting pagination info:', error);
                    document.getElementById('paginationContainer').innerHTML = '';
                });
        }

        // Function to create beautiful pagination controls
        function createPaginationControls(totalPages, totalCount) {
            const container = document.getElementById('paginationContainer');
            
            if (totalPages <= 1) {
                container.innerHTML = '';
                return;
            }

            let paginationHTML = `
                <div class="pagination-container">
                    <div class="pagination-info">
                        Page ${currentPlayerPage} of ${totalPages} â€¢ Total ${totalCount} players
                    </div>
                    <div class="pagination-buttons">
            `;

            // Previous button
            paginationHTML += `
                <button class="page-nav ${currentPlayerPage === 1 ? 'disabled' : ''}" 
                        onclick="changePage(${currentPlayerPage - 1})" ${currentPlayerPage === 1 ? 'disabled' : ''}>
                    <i class="fas fa-chevron-left"></i> Previous
                </button>
            `;

            // Page numbers - show max 5 pages
            const startPage = Math.max(1, currentPlayerPage - 2);
            const endPage = Math.min(totalPages, startPage + 4);

            // First page and ellipsis
            if (startPage > 1) {
                paginationHTML += `<button class="page-btn" onclick="changePage(1)">1</button>`;
                if (startPage > 2) {
                    paginationHTML += `<span class="pagination-ellipsis">...</span>`;
                }
            }

            // Page numbers
            for (let i = startPage; i <= endPage; i++) {
                if (i === currentPlayerPage) {
                    paginationHTML += `<button class="page-btn active">${i}</button>`;
                } else {
                    paginationHTML += `<button class="page-btn" onclick="changePage(${i})">${i}</button>`;
                }
            }

            // Last page and ellipsis
            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    paginationHTML += `<span class="pagination-ellipsis">...</span>`;
                }
                paginationHTML += `<button class="page-btn" onclick="changePage(${totalPages})">${totalPages}</button>`;
            }

            // Next button
            paginationHTML += `
                <button class="page-nav ${currentPlayerPage === totalPages ? 'disabled' : ''}" 
                        onclick="changePage(${currentPlayerPage + 1})" ${currentPlayerPage === totalPages ? 'disabled' : ''}>
                    Next <i class="fas fa-chevron-right"></i>
                </button>
            `;

            paginationHTML += `
                    </div>
                </div>
            `;

            container.innerHTML = paginationHTML;
        }

        // Function to change page
        function changePage(page) {
            if (currentSearchTerm || currentFilter !== '' || currentGender !== 'all') {
                searchPlayers(page);
            } else {
                loadInitialPlayers(page);
            }
        }

        // Reset search and show all players
        function resetSearch() {
            loadInitialPlayers(1);
        }

        // Helper function to show errors
        function showError(containerId, message) {
            document.getElementById(containerId).innerHTML = `
                <div class="col-12">
                    <div class="empty-state">
                        <i class="fas fa-exclamation-triangle text-muted"></i>
                        <h4>Error</h4>
                        <p class="text-muted">${message}</p>
                    </div>
                </div>
            `;
        }

        // Re-initialize favorite buttons
        function initializeFavoriteButtons() {
            document.querySelectorAll('.favorite-btn').forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.toggle('btn-custom');
                    this.classList.toggle('btn-outline-custom');
                    
                    if (this.classList.contains('btn-custom')) {
                        this.innerHTML = '<i class="fas fa-star me-1"></i>Favorited';
                    } else {
                        this.innerHTML = '<i class="fas fa-star me-1"></i>Favorite';
                    }
                });
            });
        }

        // Helper functions
        function showLoading(elementId) {
            const element = document.getElementById(elementId);
            if (element) element.style.display = 'block';
        }

        function hideLoading(elementId) {
            const element = document.getElementById(elementId);
            if (element) element.style.display = 'none';
        }

        // Enhanced View Profile functionality
        async function openProfileModal(userId) {
            try {
                const response = await fetch(`/Search/GetPlayerProfile/${userId}`);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const playerData = await response.json();
                
                if (playerData) {
                    document.getElementById('profileModalImage').src = playerData.profilePicture || '/images/user.png';
                    document.getElementById('profileModalName').textContent = playerData.username;
                    document.getElementById('profileModalLevel').textContent = 'Player';
                    document.getElementById('profileModalEmail').textContent = playerData.email || 'Not provided';
                    document.getElementById('profileModalPhone').textContent = playerData.phoneNo || 'Not provided';
                    document.getElementById('profileModalGender').textContent = playerData.gender || 'Not specified';
                    document.getElementById('profileModalAge').textContent = playerData.age ? playerData.age + ' years' : 'Not specified';
                    document.getElementById('profileModalLocation').textContent = 'Location data';
                    document.getElementById('profileModalBio').textContent = playerData.bio || 'No bio available';

                    const modal = new bootstrap.Modal(document.getElementById('viewProfileModal'));
                    modal.show();
                }
            } catch (error) {
                console.error('Error loading player profile:', error);
                alert('Error loading player profile. Please try again.');
            }
        }

        // Enter key support for search
        document.querySelectorAll('.search-input').forEach(input => {
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    const tabId = this.closest('.tab-pane').id;
                    if (tabId === 'players') searchPlayers(1);
                }
            });
        });
    </script>
}