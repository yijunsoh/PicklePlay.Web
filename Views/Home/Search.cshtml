@section Scripts {
    <script>
        // Player Search Variables
        let currentPlayerPage = 1;
        let currentPlayerSearchTerm = '';
        let currentPlayerFilter = '';
        let currentPlayerGender = 'all';

        // Community Search Variables
        let currentCommunityPage = 1;
        let currentCommunitySearchTerm = '';
        let currentCommunityFilter = '';

        // Game Search Variables
        let currentGamePage = 1;
        let currentGameSearchTerm = '';
        let currentGameFilter = '';

        // Competition Search Variables
        let currentCompetitionPage = 1;
        let currentCompetitionSearchTerm = '';
        let currentCompetitionFilter = '';

        // Community button handler reference
        let communityClickHandler = null;

        // Initialize tabs
        document.addEventListener('DOMContentLoaded', function () {
            loadInitialPlayers(1);
            initializeCommunityButtons(); // Initialize event delegation for join buttons

            // Set up tab change events
            document.getElementById('players-tab').addEventListener('click', function () {
                loadInitialPlayers(1);
            });

            document.getElementById('communities-tab').addEventListener('click', function () {
                loadInitialCommunities(1);
            });

            document.getElementById('games-tab').addEventListener('click', function () {
                loadInitialGames(1);
            });

            document.getElementById('competitions-tab').addEventListener('click', function () {
                loadInitialCompetitions(1);
            });
        });

        // ========== HELPER FUNCTIONS ==========
        function getCsrfToken() {
            const el = document.querySelector('input[name="__RequestVerificationToken"]');
            return el ? el.value : null;
        }

        function showAlert(type, message) {
            // You can replace this with a better notification system
            alert(type === 'success' ? message : '❌ ' + message);
        }

        function showError(containerId, message) {
            document.getElementById(containerId).innerHTML = `
                                    <div class="col-12">
                                        <div class="empty-state">
                                            <i class="fas fa-exclamation-triangle text-muted"></i>
                                            <h4>Error</h4>
                                            <p class="text-muted">${message}</p>
                                        </div>
                                    </div>
                                `;
        }

        function showLoading(elementId) {
            const element = document.getElementById(elementId);
            if (element) element.style.display = 'block';
        }

        function hideLoading(elementId) {
            const element = document.getElementById(elementId);
            if (element) element.style.display = 'none';
        }

        // ========== COMMUNITY JOIN FUNCTION ==========
        function joinCommunity(communityId, communityType, button) {
            const originalHTML = button.innerHTML;

            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Processing...';

            fetch('/Communities/JoinCommunity', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': getCsrfToken()
                },
                body: `communityId=${communityId}`
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (data.requiresApproval) {
                            button.innerHTML = '<i class="fas fa-clock me-1"></i>Pending';
                            button.classList.remove('btn-custom');
                            button.classList.add('btn-warning');
                            button.disabled = true;
                            showAlert('success', data.message);
                        } else {
                            button.innerHTML = '<i class="fas fa-check me-1"></i>Joined';
                            button.classList.remove('btn-custom');
                            button.classList.add('btn-success');
                            button.disabled = true;
                            showAlert('success', data.message);
                        }
                    } else {
                        button.innerHTML = originalHTML;
                        button.disabled = false;
                        showAlert('error', data.message);
                    }
                })
                .catch(error => {
                    console.error('Error joining community:', error);
                    button.innerHTML = originalHTML;
                    button.disabled = false;
                    showAlert('error', 'Error joining community. Please try again.');
                });
        }

