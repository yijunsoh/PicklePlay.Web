@model PicklePlay.ViewModels.EditProfileModel
@using Microsoft.EntityFrameworkCore
@using PicklePlay.Data
@using PicklePlay.Models.ViewModels
@using PicklePlay.Models
@{
    ViewData["Title"] = "Edit Profile - PicklePlay";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Malaysian states for dropdown
    var malaysianStates = new List<string>
{
"Johor", "Kedah", "Kelantan", "Kuala Lumpur", "Labuan", "Melaka",
"Negeri Sembilan", "Pahang", "Penang", "Perak", "Perlis", "Putrajaya",
"Sabah", "Sarawak", "Selangor", "Terengganu"
};
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2E8B57;
            --secondary: #FF6B35;
            --accent: #1E5B32;
            --light: #F8F9FA;
            --dark: #343A40;
            --court: #E8F5E9;
        }

        body {
            background: #F8F9FA;
            background-size: cover;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #2E8B57 0%, #1E5B32 100%);
            color: white;
            padding: 30px 0;
            border-radius: 0 0 20px 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .profile-header img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #A1D336;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .form-container {
            max-width: 100%;
            background: #ffffff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .form-container:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .section-title {
            color: #2E8B57;
            font-weight: 700;
            border-bottom: 2px solid #2E8B57;
            padding-bottom: 10px;
            margin-bottom: 20px;
            display: inline-block;
            font-size: 1.4rem;
        }

        .btn-save {
            background: #2E8B57;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-save:hover {
            background: #1E5B32;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-edit {
            background: #FF6B35;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-edit:hover {
            background: #e55a2b;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 28px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-cancel:hover {
            background: #5a6268;
            color: white;
            transform: translateY(-2px);
        }

        .btn-verify {
            background-color: #17a2b8;
            color: white;
            font-weight: bold;
            border: none;
            padding: 6px 12px;
            font-size: 0.875rem;
            border-radius: 20px;
        }

        .btn-verify:hover {
            background-color: #138496;
            color: white;
        }

        /* Form states */
        .form-control:read-only {
            background-color: #f8f9fa;
            border-color: #e9ecef;
            border-radius: 10px;
        }

        .form-control:focus {
            border-color: #2E8B57;
            box-shadow: 0 0 0 0.2rem rgba(46, 139, 87, 0.25);
            border-radius: 10px;
        }

        .edit-mode .form-control {
            background-color: white;
            border-color: #ced4da;
            border-radius: 10px;
        }

        /* Validation styles */
        .field-validation-error {
            color: #dc3545;
            font-size: 0.875rem;
            display: block;
            margin-top: 0.25rem;
        }

        .input-validation-error {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

        .validation-summary-errors {
            color: #dc3545;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
        }

        .validation-summary-errors ul {
            margin-bottom: 0;
            padding-left: 1rem;
        }

        /* Email verification section */
        .email-verification {
            background-color: #e8f5e9;
            border: 1px solid #2E8B57;
            border-radius: 12px;
            padding: 15px;
            margin: 15px 0;
        }

        .email-verified {
            color: #28a745;
            font-weight: bold;
        }

        .email-pending {
            color: #ffc107;
            font-weight: bold;
        }

        /* Wallet + Communities box */
        .side-box {
            background: #fff;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            border: 1px solid rgba(46, 139, 87, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .side-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .wallet-balance {
            font-size: 2.2rem;
            font-weight: bold;
            color: #2E8B57;
            text-align: center;
        }

        .wallet-overview {
            margin-top: 15px;
            text-align: center;
        }

        .wallet-overview p {
            margin-bottom: 8px;
            font-weight: 500;
        }

        .community-list li {
            background: #f8f9fa;
            padding: 12px 15px;
            border-radius: 10px;
            margin-bottom: 10px;
            transition: all 0.3s;
            border-left: 4px solid #2E8B57;
        }

        .community-list li:hover {
            background: #e8f5e9;
            transform: translateX(5px);
        }

        .community-list a {
            color: #333;
            text-decoration: none;
            font-weight: 500;
        }

        .community-list a:hover {
            color: #2E8B57;
        }

        /* Chart container */
        .chart-container {
            position: relative;
            height: 200px;
            width: 100%;
        }

        /* Password change button */
        .btn-password-change {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 12px 20px;
            width: 100%;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-password-change:hover {
            background-color: #5a6268;
            color: white;
        }

        .btn-password-change:disabled {
            background-color: #6c757d;
            color: white;
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        .btn-password-change-enabled {
            background-color: #2E8B57 !important;
            color: white !important;
        }

        .btn-password-change-enabled:hover {
            background-color: #1E5B32 !important;
            color: white !important;
            transform: translateY(-2px);
        }

        /* Profile image upload area */
        .profile-image-upload {
            position: relative;
            display: inline-block;
        }

        .profile-image-upload .edit-overlay {
            position: absolute;
            bottom: 5px;
            right: 5px;
            background: #2E8B57;
            color: white;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0;
            transition: all 0.3s;
        }

        .profile-image-upload:hover .edit-overlay {
            opacity: 1;
        }

        /* Stats cards */
        .stats-card {
            text-align: center;
            padding: 20px 15px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            border: 1px solid rgba(46, 139, 87, 0.1);
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .stats-card i {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #2E8B57;
        }

        .stats-card h4 {
            font-weight: 700;
            color: #343A40;
            margin-bottom: 5px;
            font-size: 1.4rem;
        }

        .stats-card p {
            color: #6c757d;
            margin: 0;
            font-weight: 500;
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .profile-header img {
                width: 80px;
                height: 80px;
            }

            .button-group {
                flex-direction: column;
                gap: 10px;
            }

            .button-group .btn {
                width: 100%;
            }

            .form-container {
                padding: 20px 15px;
                margin: 10px 0;
            }

            .side-box {
                padding: 20px;
            }

            .wallet-balance {
                font-size: 1.8rem;
            }

            .container {
                padding: 0 10px;
            }

            .page-header {
                padding: 20px 0;
            }
        }

        @@media (max-width: 576px) {
            .profile-header img {
                width: 70px;
                height: 70px;
            }

            .form-container {
                padding: 15px 10px;
            }

            .btn-save,
            .btn-edit,
            .btn-cancel {
                padding: 10px 20px;
                font-size: 0.9rem;
            }

            .wallet-balance {
                font-size: 1.5rem;
            }
        }

        .rank-profile-display {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 15px;
    padding: 25px;
    color: white;
    text-align: center;
    margin-bottom: 20px;
}

.rank-profile-rating {
    font-size: 3.5rem;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    margin-bottom: 10px;
}

.rank-profile-status {
    display: inline-block;
    padding: 6px 16px;
    border-radius: 20px;
    background: rgba(255,255,255,0.25);
    font-size: 0.9rem;
    font-weight: 600;
}

.rank-reliability-section {
    background: white;
    border-radius: 12px;
    padding: 15px;
    margin-bottom: 15px;
}

.rank-reliability-section label {
    color: #6c757d;
    font-size: 0.85rem;
    margin-bottom: 8px;
}

.rank-stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    background: white;
    border-radius: 12px;
    padding: 15px;
}

.rank-stat-item {
    text-align: center;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e9ecef;
}

.rank-stat-value {
    font-size: 1.4rem;
    font-weight: bold;
    color: #667eea;
    margin-bottom: 4px;
}

.rank-stat-label {
    font-size: 0.8rem;
    color: #6c757d;
    font-weight: 500;
}

.rank-match-types {
    background: white;
    border-radius: 12px;
    padding: 15px;
    margin-top: 15px;
}

.rank-match-type-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
}

.rank-match-type-item:last-child {
    border-bottom: none;
}

.rank-action-buttons {
    margin-top: 15px;
}

.btn-view-history {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 600;
    width: 100%;
    transition: all 0.3s;
}

.btn-view-history:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    color: white;
}

.btn-view-leaderboard {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 600;
    width: 100%;
    margin-top: 10px;
    transition: all 0.3s;
}

.btn-view-leaderboard:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
}


/* Refresh Button Animation */
@@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

.rotate-animation {
    animation: rotate 1s linear infinite;
}

#refreshRankBtn {
    transition: all 0.3s ease;
}

#refreshRankBtn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
}

#refreshRankBtn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}
    </style>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-user-edit me-3"></i>My Profile</h1>
                @* <p class="lead mb-0">Manage your personal information and preferences</p> *@
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Community", "Home")" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Back to Community
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <!-- Display Messages -->
@if (TempData["SuccessMessage"] != null)
{
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

@if (TempData["InfoMessage"] != null)
{
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

    <div class="row">
    <div class="col-lg-8 col-md-7">
        <div class="form-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0"><i class="fas fa-user-cog me-2"></i>Profile Settings</h3>
                <button type="button" class="btn btn-edit" id="editToggleBtn">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </button>
            </div>

            <form method="post" asp-controller="Home" asp-action="UpdateProfile" enctype="multipart/form-data"
                  id="profileForm" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="CurrentProfileImagePath" />

                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                <div class="profile-header mb-4">
                    <div class="profile-image-upload">
                        <img src="@(string.IsNullOrEmpty(Model.CurrentProfileImagePath) ? "/images/profile_image.jpg" : Model.CurrentProfileImagePath)"
                             alt="Profile Picture" id="profileImagePreview" class="shadow">
                        <div class="edit-overlay" onclick="document.getElementById('profileImage').click()">
                            <i class="fas fa-camera"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="fw-bold mb-2" id="displayName">@Model.FullName</h4>
                        <p class="text-muted mb-2">Member since @DateTime.Now.Year</p>
                        <input type="file" class="form-control d-none" id="profileImage" name="ProfileImage"
                               accept="image/*" style="max-width: 300px;">
                        <small class="text-muted d-none" id="imageHelp">
                            <i class="fas fa-info-circle me-1"></i>Max file size: 5MB. Supported formats: JPG, PNG, GIF
                        </small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">
                            <i class="fas fa-user me-2"></i>Full Name
                        </label>
                        <input asp-for="FullName" class="form-control" readonly
                               data-original-value="@Model.FullName" />
                        <span asp-validation-for="FullName" class="field-validation-error"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" readonly
                                   data-original-value="@Model.Email" />
                            <span class="input-group-text bg-success text-white">
                                <i class="fas fa-check me-1"></i>Verified
                            </span>
                        </div>
                        <small class="text-muted">Email cannot be changed</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold">
                            <i class="fas fa-phone me-2"></i>Phone Number
                        </label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., +6012-3456789" readonly
                               data-original-value="@Model.PhoneNumber" pattern="^(\+?6?01)[0-46-9]-*[0-9]{7,8}$"
                               title="Please enter a valid Malaysian phone number (e.g., +6012-3456789 or 012-3456789)" />
                        <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                        <small class="text-muted">Format: +6012-3456789 or 012-3456789</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label fw-bold">
                            <i class="fas fa-venus-mars me-2"></i>Gender
                        </label>
                        <select asp-for="Gender" class="form-control" disabled data-original-value="@Model.Gender">
                            <option value="">Select your gender</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateOfBirth" class="form-label fw-bold">
                            <i class="fas fa-birthday-cake me-2"></i>Date of Birth
                        </label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" readonly
                               data-original-value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")"
                               max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")"
                               title="You must be at least 18 years old" />
                        <span asp-validation-for="DateOfBirth" class="field-validation-error"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Age" class="form-label fw-bold">Age</label>
                        <input asp-for="Age" class="form-control" readonly />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Location" class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-2"></i>Location (State)
                        </label>
                        <select asp-for="Location" class="form-control" disabled
                                data-original-value="@Model.Location">
                            <option value="">Select your state</option>
                            @foreach (var state in malaysianStates)
                            {
                                <option value="@state">@state</option>
                            }
                        </select>
                        <span asp-validation-for="Location" class="field-validation-error"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <div class="d-grid">
                            <button type="button" class="btn btn-password-change" id="changePasswordBtn"
                                    data-bs-toggle="modal" data-bs-target="#changePasswordModal" disabled>
                                <i class="fas fa-key me-2"></i>Change Password
                            </button>
                        </div>
                        <small class="text-muted">Click "Edit Profile" to enable password change</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Bio" class="form-label fw-bold">
                        <i class="fas fa-edit me-2"></i>Bio
                    </label>
                    <textarea asp-for="Bio" class="form-control" rows="3"
                              placeholder="Tell something about yourself..." readonly data-original-value="@Model.Bio"
                              maxlength="500"></textarea>
                    <span asp-validation-for="Bio" class="field-validation-error"></span>
                    <small class="text-muted">
                        <span id="bioCharCount">@(Model.Bio?.Length ?? 0)</span>/500 characters
                    </small>
                </div>

                <div class="d-flex gap-2 button-group mt-4">
                    <button type="submit" class="btn btn-save d-none" id="saveBtn">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <button type="button" class="btn btn-cancel d-none" id="cancelBtn">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                </div>
            </form>

            <div class="mt-4">
                @await Component.InvokeAsync("EndorsementSection", new { userId = Model.UserId })
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-5">
        
        <div class="side-box">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">
                    <i class="bi bi-graph-up-arrow me-2 text-primary"></i>Rank Rating
                </h5>
                <button type="button" class="btn btn-sm btn-outline-primary" id="refreshRankBtn" title="Refresh RANK data">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                </div>

            <div id="profileRankLoading" class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-2 small">Loading your rating...</p>
            </div>

            <div id="profileRankData" style="display: none;">
                </div>

            <div id="profileRankError" style="display: none;">
                <div class="alert alert-danger mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <span id="rankErrorMessage">Failed to load RANK data</span>
                </div>
            </div>
