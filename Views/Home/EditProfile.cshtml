            // Get error span for a field
            function getErrorSpan(field) {
                let errorSpan = field.nextElementSibling;
                if (!errorSpan || !errorSpan.classList.contains('field-validation-error')) {
                    errorSpan = field.parentNode.querySelector('.field-validation-error');
                }
                return errorSpan;
            }

            // Field validation function
            function validateField(field) {
                // Clear previous validation
                clearFieldError(field);

                let errorSpan = getErrorSpan(field);
                let isValid = true;
                let errorMessage = '';

                // Full Name validation - ALWAYS required when in edit mode
                if (field.name === 'FullName') {
                    if (!field.value.trim()) {
                        errorMessage = 'Full name is required.';
                        isValid = false;
                    } else if (field.value.trim().length < 2) {
                        errorMessage = 'Full name must be at least 2 characters long.';
                        isValid = false;
                    } else if (field.value.trim().length > 100) {
                        errorMessage = 'Full name cannot exceed 100 characters.';
                        isValid = false;
                    }
                }
                // Phone number validation
                else if (field.name === 'PhoneNumber' && field.value.trim()) {
                    const phoneRegex = /^(\+?6?01)[0-46-9]-*[0-9]{7,8}$/;
                    if (!phoneRegex.test(field.value.trim())) {
                        errorMessage = 'Please enter a valid Malaysian phone number (e.g., +6012-3456789 or 012-3456789)';
                        isValid = false;
                    }
                }
                // Phone number is empty - THIS IS ALLOWED, so no error
                else if (field.name === 'PhoneNumber' && !field.value.trim()) {
                    // Empty phone number is allowed, so no validation error
                    isValid = true;
                }
                // Date of birth validation (must be 18+)
                else if (field.type === 'date' && field.value) {
                    const dob = new Date(field.value);
                    const today = new Date();
                    let age = today.getFullYear() - dob.getFullYear();
                    const monthDiff = today.getMonth() - dob.getMonth();

                    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < dob.getDate())) {
                        age--;
                    }

                    if (age < 18) {
                        errorMessage = 'You must be at least 18 years old.';
                        isValid = false;
                    }
                }
                // Bio length validation
                else if (field.name === 'Bio' && field.value.length > 500) {
                    errorMessage = 'Bio cannot exceed 500 characters.';
                    isValid = false;
                }
                // Location validation
                else if (field.name === 'Location' && field.value && field.value.length > 100) {
                    errorMessage = 'Location cannot exceed 100 characters.';
                    isValid = false;
                }

                // Show error if invalid
                if (!isValid) {
                    field.classList.add('input-validation-error');
                    if (errorSpan) {
                        errorSpan.textContent = errorMessage;
                        errorSpan.style.display = 'block';
                    }
                }

                return isValid;
            }

            // Clear all validation errors
            function clearValidationErrors() {
                inputs.forEach(input => {
                    clearFieldError(input);
                });
            }

            // Form submission validation - STRICT validation
            form.addEventListener('submit', function (e) {
                let isFormValid = true;

                // Validate all editable fields
                inputs.forEach(input => {
                    if (input.type !== 'file' && !input.readOnly) {
                        if (!validateField(input)) {
                            isFormValid = false;
                        }
                    }
                });

                // SPECIAL CHECK: FullName must not be empty
                if (fullNameInput && !fullNameInput.readOnly) {
                    if (!fullNameInput.value.trim()) {
                        validateField(fullNameInput); // This will show the error
                        isFormValid = false;
                    }
                }

                if (!isFormValid) {
                    e.preventDefault();
                    e.stopPropagation(); // Important: Stop the form from submitting

                    // Scroll to first error
                    const firstError = form.querySelector('.input-validation-error');
                    if (firstError) {
                        firstError.scrollIntoView({
                            behavior: 'smooth',
