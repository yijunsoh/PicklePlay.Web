@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.2.0"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize wallet chart
            const ctx = document.getElementById('walletChart').getContext('2d');
            const walletChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Balance', 'Escrow', 'Spent'],
                    datasets: [{
                        data: [250, 120, 80],
                        backgroundColor: [
                            'rgba(25, 135, 84, 0.8)',
                            'rgba(13, 110, 253, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgba(25, 135, 84, 1)',
                            'rgba(13, 110, 253, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        datalabels: {
                            color: '#fff',
                            font: {
                                weight: 'bold',
                                size: 12
                            },
                            formatter: (value, ctx) => {
                                let label = ctx.chart.data.labels[ctx.dataIndex];
                                return label + "\nRM " + value;
                            }
                        }
                    }
                },
                plugins: [ChartDataLabels]
            });

            const editToggleBtn = document.getElementById('editToggleBtn');
            const saveBtn = document.getElementById('saveBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const form = document.getElementById('profileForm');
            const inputs = form.querySelectorAll('input, select, textarea');
            const profileImageInput = document.getElementById('profileImage');
            const imageHelp = document.getElementById('imageHelp');
            const bioTextarea = document.getElementById('Bio');
            const bioCharCount = document.getElementById('bioCharCount');
            const fullNameInput = document.getElementById('FullName');
            const locationSelect = document.querySelector('select[name="Location"]');
            const changePasswordBtn = document.getElementById('changePasswordBtn');

            // Store original values for cancel functionality
            const originalValues = {};
            inputs.forEach(input => {
                if (input.type !== 'file') {
                    originalValues[input.name] = input.value;
                }
            });

            // Edit mode toggle
            // Edit mode toggle
            editToggleBtn.addEventListener('click', function () {
                form.classList.add('edit-mode');
                inputs.forEach(input => {
                    if (input.id !== 'Age' && input.name !== 'Email') { // Keep age and email readonly
                        input.readOnly = false;
                    }
                    if (input.tagName === 'SELECT') {
                        input.disabled = false;
                    }
                });

                // Show file input
                profileImageInput.classList.remove('d-none');
                imageHelp.classList.remove('d-none');

                // Show action buttons
                saveBtn.classList.remove('d-none');
                cancelBtn.classList.remove('d-none');
                editToggleBtn.classList.add('d-none');

                // ‚úÖ FIX: Enable the Change Password button
                changePasswordBtn.disabled = false;
                changePasswordBtn.classList.add('btn-password-change-enabled');
            });


            // Cancel edit
            cancelBtn.addEventListener('click', function () {
                form.classList.remove('edit-mode');
                inputs.forEach(input => {
                    input.readOnly = true;
                    if (input.tagName === 'SELECT') {
                        input.disabled = true;
                    }
                    // Restore original values
                    if (originalValues[input.name] !== undefined) {
                        input.value = originalValues[input.name];
                    }
                });

                // Hide file input and reset
                profileImageInput.classList.add('d-none');
                imageHelp.classList.add('d-none');
                profileImageInput.value = '';

                // Hide action buttons
                saveBtn.classList.add('d-none');
                cancelBtn.classList.add('d-none');
                editToggleBtn.classList.remove('d-none');

                changePasswordBtn.disabled = true;
                changePasswordBtn.classList.remove('btn-password-change-enabled');

                // Clear validation errors
                clearValidationErrors();
                updateBioCharCount();
            });

            // Bio character counter
            function updateBioCharCount() {
                if (bioTextarea) {
                    const charCount = bioTextarea.value.length;
                    bioCharCount.textContent = charCount;
                }
            }

            if (bioTextarea) {
                bioTextarea.addEventListener('input', updateBioCharCount);
            }

            // Real-time validation
            inputs.forEach(input => {
                if (input.type !== 'file') {
                    input.addEventListener('blur', function () {
                        validateField(this);
                    });

                    input.addEventListener('input', function () {
                        // Clear error when user starts typing
                        clearFieldError(this);
                    });
                }
            });

            // Clear field error
            function clearFieldError(field) {
                field.classList.remove('input-validation-error');
                let errorSpan = getErrorSpan(field);
                if (errorSpan) {
                    errorSpan.style.display = 'none';
