{
"Johor",
"Kedah",
"Kelantan",
"Kuala Lumpur",
"Labuan",
"Melaka",
"Negeri Sembilan",
"Pahang",
"Penang",
"Perak",
"Perlis",
"Putrajaya",
"Sabah",
"Sarawak",
"Selangor",
"Terengganu"
};
}

@section Styles {
    <style>
        body {
            background: #F8F9FA;
            background-size: cover;
            min-height: 100vh;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .profile-header img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #A1D336;
        }

        .form-container {
            max-width: 100%;
            background: #ffffff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .btn-save {
            background-color: #28a745;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px 20px;
        }

        .btn-save:hover {
            background-color: #218838;
            color: white;
        }

        .btn-edit {
            background-color: #6c757d;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px 20px;
        }

        .btn-edit:hover {
            background-color: #5a6268;
            color: white;
        }

        .btn-cancel {
            background-color: #dc3545;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px 20px;
        }

        .btn-cancel:hover {
            background-color: #c82333;
            color: white;
        }

        .btn-verify {
            background-color: #17a2b8;
            color: white;
            font-weight: bold;
            border: none;
            padding: 6px 12px;
            font-size: 0.875rem;
        }

        .btn-verify:hover {
            background-color: #138496;
            color: white;
        }

        /* Form states */
        .form-control:read-only {
            background-color: #f8f9fa;
            border-color: #e9ecef;
        }

        .form-control:focus {
            border-color: #A1D336;
            box-shadow: 0 0 0 0.2rem rgba(161, 211, 54, 0.25);
        }

        .edit-mode .form-control {
            background-color: white;
            border-color: #ced4da;
        }

        /* Validation styles */
        .field-validation-error {
            color: #dc3545;
            font-size: 0.875rem;
            display: block;
            margin-top: 0.25rem;
        }

        .input-validation-error {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

        .validation-summary-errors {
            color: #dc3545;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 0.375rem;
            padding: 0.75rem 1.25rem;
            margin-bottom: 1rem;
        }

        .validation-summary-errors ul {
            margin-bottom: 0;
            padding-left: 1rem;
        }

        /* Email verification section */
        .email-verification {
            background-color: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
        }

        .email-verified {
            color: #28a745;
            font-weight: bold;
        }

        .email-pending {
            color: #ffc107;
            font-weight: bold;
        }

        /* Wallet + Communities box */
        .side-box {
            background: #fff;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            height: fit-content;
        }

        .wallet-balance {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            text-align: center;
        }

        .wallet-overview {
            margin-top: 10px;
            text-align: center;
        }

        .wallet-overview p {
            margin-bottom: 5px;
        }

        .community-list li {
            background: #f8f9fa;
            padding: 8px 12px;
            border-radius: 8px;
            margin-bottom: 8px;
            transition: background-color 0.2s;
        }

        .community-list li:hover {
            background: #e9ecef;
        }

        .community-list a {
            color: #333;
            text-decoration: none;
        }

        .community-list a:hover {
            color: #A1D336;
        }

        /* Chart container */
        .chart-container {
            position: relative;
            height: 200px;
            width: 100%;
        }

        /* Password change button */
        .btn-password-change {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            width: 100%;
        }

        .btn-password-change:hover {
            background-color: #5a6268;
            color: white;
        }

        .btn-password-change:disabled {
            background-color: #6c757d;
            color: white;
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn-password-change:disabled:hover {
            background-color: #6c757d;
            color: white;
        }

        /* When enabled (edit mode) - use JavaScript to add this class */
        .btn-password-change-enabled {
            background-color: #28a745;
            color: white;
        }

        .btn-password-change-enabled:hover {
            background-color: #218838;
            color: white;
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .profile-header img {
                width: 80px;
                height: 80px;
            }

            .button-group {
                flex-direction: column;
                gap: 10px;
            }

            .button-group .btn {
                width: 100%;
            }

            .form-container {
                padding: 20px 15px;
                margin: 10px 0;
            }

            .side-box {
                padding: 15px;
            }

            .wallet-balance {
                font-size: 1.5rem;
            }

            .container {
                padding: 0 10px;
            }
        }

        @@media (max-width: 576px) {
            .profile-header img {
                width: 70px;
                height: 70px;
            }

            .form-container {
                padding: 15px 10px;
            }

            .btn-save,
            .btn-edit,
            .btn-cancel {
                padding: 8px 16px;
                font-size: 0.9rem;
            }

            .wallet-balance {
                font-size: 1.3rem;
            }
        }
    </style>
}

<div class="container mt-4">
    <a href="@Url.Action("Community", "Home")" class="btn btn-warning mb-3">&larr; Back to Community</a>

    <!-- Display Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Left side: Profile form -->
        <div class="col-lg-8 col-md-7">
            <div class="form-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="mb-0">Edit Profile</h3>
                    <button type="button" class="btn btn-edit" id="editToggleBtn">Edit Profile</button>
                </div>

                <!-- Profile Form -->
                <form method="post" asp-controller="Home" asp-action="UpdateProfile" enctype="multipart/form-data"
                    id="profileForm" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="CurrentProfileImagePath" />

                    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                    <div class="profile-header mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.CurrentProfileImagePath) ? "/images/profile_image.jpg" : Model.CurrentProfileImagePath)"
                            alt="Profile Picture" id="profileImagePreview">
                        <div class="flex-grow-1">
                            <h4 class="fw-bold mb-2" id="displayName">@Model.FullName</h4>
                            <input type="file" class="form-control d-none" id="profileImage" name="ProfileImage"
                                accept="image/*" style="max-width: 300px;">
                            <small class="text-muted d-none" id="imageHelp">Max file size: 5MB. Supported formats: JPG,
                                PNG, GIF</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" readonly
                                data-original-value="@Model.FullName" />
                            <span asp-validation-for="FullName" class="field-validation-error"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" readonly
                                    data-original-value="@Model.Email" />
                                <span class="input-group-text email-verified">‚úì Verified</span>
                            </div>
                            <small class="text-muted">Email cannot be changed</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., +6012-3456789" readonly
                                data-original-value="@Model.PhoneNumber" pattern="^(\+?6?01)[0-46-9]-*[0-9]{7,8}$"
                                title="Please enter a valid Malaysian phone number (e.g., +6012-3456789 or 012-3456789)" />
                            <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                            <small class="text-muted">Format: +6012-3456789 or 012-3456789</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <select asp-for="Gender" class="form-control" disabled data-original-value="@Model.Gender">
                                <option value="">Select your gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" readonly
                                data-original-value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")"
                                max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")"
                                title="You must be at least 18 years old" />
                            <span asp-validation-for="DateOfBirth" class="field-validation-error"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Age" class="form-label">Age</label>
                            <input asp-for="Age" class="form-control" readonly />
                        </div>
                    </div>

                    <!-- Location and Password Change Section -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Location" class="form-label">Location (State)</label>
                            <select asp-for="Location" class="form-control" disabled
                                data-original-value="@Model.Location">
                                <option value="">Select your state</option>
                                @foreach (var state in malaysianStates)
                                {
                                    <option value="@state">@state</option>
                                }
                            </select>
                            <span asp-validation-for="Location" class="field-validation-error"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Password</label>
                            <div class="d-grid">
                                <button type="button" class="btn btn-password-change" id="changePasswordBtn"
                                    data-bs-toggle="modal" data-bs-target="#changePasswordModal" disabled>
                                    Change Password
                                </button>
                            </div>
                            <small class="text-muted">Click "Edit Profile" to enable password change</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Bio" class="form-label"></label>
                        <textarea asp-for="Bio" class="form-control" rows="3"
                            placeholder="Tell something about yourself..." readonly data-original-value="@Model.Bio"
                            maxlength="500"></textarea>
                        <span asp-validation-for="Bio" class="field-validation-error"></span>
                        <small class="text-muted"><span id="bioCharCount">@(Model.Bio?.Length ?? 0)</span>/500
                            characters</small>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 button-group">
                        <button type="submit" class="btn btn-save d-none" id="saveBtn">Save Changes</button>
                        <button type="button" class="btn btn-cancel d-none" id="cancelBtn">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Right side: Wallet + Communities -->
        <div class="col-lg-4 col-md-5">
            <!-- Wallet Section -->
            <div class="side-box text-center">
                <h5 class="mb-3">üí∞ Wallet Balance & Overview</h5>
                <div class="chart-container">
                    <canvas id="walletChart"></canvas>
                </div>

                <!-- Legend -->
                <div class="mt-3">
                    <span class="badge bg-success me-1">Balance</span>
                    <span class="badge bg-primary me-1">Escrow</span>
                    <span class="badge bg-danger">Spent</span>
                </div>
                <div class="wallet-balance mt-2">RM 250.00</div>
                <div class="wallet-overview text-muted">
                    <p class="mb-1">Total Escrow: RM 120.00</p>
                    <p class="mb-2">Total Spent: RM 80.00</p>
                    <a href="@Url.Action("WalletManagement", "Wallet")" class="btn btn-sm btn-save mt-2">
                        Go to Wallet Management
                    </a>
                </div>
            </div>

            <!-- Communities Section -->
            <div class="side-box">
                <h5 class="mb-3">üåê Communities Joined</h5>
                <ul class="community-list list-unstyled">
                    <li>
                        <a href="@Url.Action("CommunityPages", "Home")" class="text-decoration-none">
