                    <li>‚ö° Weekend Warriors</li>
                </ul>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Community", "Home")" class="btn btn-outline-primary btn-sm">View All
                        Communities</a>
                </div>
            </div>
        </div>
    </div>
</div>

