<script>
    // Toggle icon rotation
    document.querySelector('[data-bs-target="#achievementCollapse"]')?.addEventListener('click', function() {
        const icon = this.querySelector('.achievement-toggle');
        icon?.classList.toggle('collapsed');
    });
</script>