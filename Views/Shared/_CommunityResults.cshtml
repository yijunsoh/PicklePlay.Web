@model List<PicklePlay.Models.Community>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var currentUserId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
}

@if (Model != null && Model.Any())
{
    foreach (var community in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="result-card">
                <div class="d-flex align-items-start">
                    <div class="community-icon">
                        @if (!string.IsNullOrEmpty(community.CommunityPic))
                        {
                            <img src="@community.CommunityPic" alt="@community.CommunityName"
                                style="width: 100%; height: 100%; border-radius: 16px; object-fit: cover;"
                                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <i class="fas fa-users" style="display: none;"></i>
                        }
                        else
                        {
                            <i class="fas fa-users"></i>
                        }
                    </div>
                    <div class="player-info">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4>@community.CommunityName</h4>
                                <p class="text-muted mb-2">@(community.Description ?? "Active pickleball community")</p>
                            </div>
                            <div class="text-end">
                                <div
                                    class="fw-bold @(community.CommunityType == "Public" ? "text-success" : "text-warning") mb-2">
                                    @community.CommunityType Community
                                </div>
                                <small class="text-muted">Created @community.CreatedDate.ToString("MMM yyyy")</small>
                            </div>
                        </div>
                        <div class="d-flex flex-wrap mb-3">
                            <span class="stats-badge">
                                <i class="fas fa-users me-1"></i>
                                @community.Memberships.Count(m => m.Status == "Active") members
                            </span>
                            <span class="stats-badge">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                @(community.CommunityLocation ?? "Various locations")
                            </span>
                            <span class="stats-badge">
                                <i class="fas fa-calendar me-1"></i>
                                @(community.LastActivityDate?.ToString("MMM yyyy") ?? "Recently active")
                            </span>
                        </div>
                        <div class="action-buttons">
                            @{
                                var activeMembership = community.Memberships.FirstOrDefault(m => m.UserId == currentUserId && m.Status == "Active");
                                var pendingMembership = community.Memberships.FirstOrDefault(m => m.UserId == currentUserId && m.Status == "Pending");
                                var inactiveMembership = community.Memberships.FirstOrDefault(m => m.UserId == currentUserId && m.Status == "Inactive");
                            }
                            
                            @if (activeMembership != null)
                            {
                                <button class="btn btn-success" disabled>
                                    <i class="fas fa-check me-1"></i>Joined
                                </button>
                            }
                            else if (pendingMembership != null)
                            {
                                <button class="btn btn-warning" disabled>
                                    <i class="fas fa-clock me-1"></i>Pending
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-custom join-community-btn" data-community-id="@community.CommunityId"
                                    data-community-type="@community.CommunityType">
                                    <i class="fas fa-plus me-1"></i>
                                    @(community.CommunityType == "Private" ? "Request to Join" : "Join Community")
                                </button>
                            }
                            <button class="btn btn-profile view-community-btn" 
                                onclick="openCommunityDetailModal(@community.CommunityId)">
                                <i class="fas fa-eye me-1"></i>View Community
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="empty-state">
            <i class="fas fa-users text-muted"></i>
            <h4>No communities found</h4>
            <p class="text-muted">Try adjusting your search criteria</p>
        </div>
    </div>
}