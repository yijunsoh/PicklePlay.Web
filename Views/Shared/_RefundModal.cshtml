<div class="modal fade" id="refundModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Request Refund</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2 text-muted">Please explain why you are requesting a refund.</p>
                <textarea id="refundReason" class="form-control" rows="4" placeholder="Enter refund reason here..."></textarea>
                <input type="hidden" id="refundScheduleId" />
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-warning" onclick="submitRefundRequest()">Submit Refund Request</button>
            </div>

        </div>
    </div>
</div>
