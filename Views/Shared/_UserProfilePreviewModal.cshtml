<script>
    (function () {
        // attach report button handler (delegated in case modal inserted late)
        document.addEventListener('click', function (e) {
            const el = e.target.closest('#reportUserBtn');
            if (!el) return;

            // Show blocking modal - static backdrop, no keyboard close
            const modalEl = document.getElementById('aiReportModal');
            const bm = new bootstrap.Modal(modalEl, { backdrop: 'static', keyboard: false });
            bm.show();
        });

        // "I want continue do FYP" -> boombastic effect then close report modal
        document.getElementById('reportContinueBtn')?.addEventListener('click', function () {
            // create overlay
            if (document.getElementById('fullBoomOverlay')) return; // already showing

            const overlay = document.createElement('div');
            overlay.id = 'fullBoomOverlay';
            overlay.innerHTML = '<div class="boom-bg"></div><div class="boom-card">BOOMBASTIC! ðŸ’¥ Please Try Again!</div>';
            document.body.appendChild(overlay);

            // prevent interaction with page while effect plays
            const prevOverflow = document.body.style.overflow;
            document.body.style.overflow = 'hidden';

            // keep report modal visible and prevent close (backdrop static already). Do NOT hide report modal.
            // remove overlay after strong effect duration, but keep report modal open.
            setTimeout(() => {
                overlay.remove();
                document.body.style.overflow = prevOverflow || '';
            }, 2500);
        });

        // "Let's go play pickleball" -> full-screen cat overlay replacing site (with close button)
        document.getElementById('reportPlayBtn')?.addEventListener('click', function () {
            const modalEl = document.getElementById('aiReportModal');
            const modalInstance = bootstrap.Modal.getInstance(modalEl);
            if (modalInstance) modalInstance.hide();

            // remove site's main content and show cat overlay (we don't actually remove nodes; we overlay full-screen)
            const overlay = document.createElement('div');
            overlay.id = 'catOverlay';
            overlay.style.position = 'fixed';
            overlay.style.inset = '0';
            overlay.style.zIndex = '10800';
            overlay.style.display = 'flex';
            overlay.style.alignItems = 'center';
            overlay.style.justifyContent = 'center';
            overlay.style.flexDirection = 'column';
            overlay.style.background = 'rgba(0,0,0,0.98)';
            overlay.innerHTML = `
                <button id="catCloseBtn" style="position:absolute;right:18px;top:18px;padding:10px 14px;border-radius:10px;border:none;background:#fff;font-weight:700;cursor:pointer;z-index:10901;">Close</button>
                <img src="/images/cat.png" alt="Good choice" style="max-width:92vw;max-height:78vh;border-radius:12px;box-shadow:0 12px 50px rgba(0,0,0,0.6);" />
                <div style="color:#fff;margin-top:18px;font-size:1.25rem;font-weight:800;text-align:center;">Good choices FROM your teammate - QS</div>
            `;
            document.body.appendChild(overlay);
            const prevOverflow = document.body.style.overflow;
            document.body.style.overflow = 'hidden';

            document.getElementById('catCloseBtn')?.addEventListener('click', function () {
                overlay.remove();
                document.body.style.overflow = prevOverflow || '';
            });
        });

        // If userProfile modal is closed we ensure report modal is hidden too
        document.getElementById('userProfilePreviewModal')?.addEventListener('hidden.bs.modal', function () {
            const reportModal = document.getElementById('aiReportModal');
            const inst = bootstrap.Modal.getInstance(reportModal);
            if (inst) inst.hide();
        });

    })();
</script>