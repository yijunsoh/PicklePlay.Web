<!-- Clean Report Modal -->
<div class="modal fade" id="aiReportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius:14px;">
            <div class="modal-body text-center p-4">
                <h5 class="mb-3">Report User</h5>

                <p class="text-muted">Are you sure you want to report this user?</p>

                <div class="d-flex justify-content-center gap-2 mt-3">
                    <button id="reportCancelBtn" class="btn btn-outline-secondary">Cancel</button>
                    <button id="reportConfirmBtn" class="btn btn-danger">Submit Report</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    // Store modal instances
    let reportModalInstance = null;
    let userPreviewModalInstance = null;

    // Initialize modals when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize report modal
        const reportModalEl = document.getElementById('aiReportModal');
        if (reportModalEl) {
            reportModalInstance = new bootstrap.Modal(reportModalEl, {
                backdrop: true,
                keyboard: true
            });
        }

        // Initialize user preview modal
        const userPreviewModalEl = document.getElementById('userProfilePreviewModal');
        if (userPreviewModalEl) {
            userPreviewModalInstance = new bootstrap.Modal(userPreviewModalEl);
        }

        // Setup event listeners
        setupEventListeners();
    });

    function setupEventListeners() {
        // Report button click
        document.addEventListener('click', function(e) {
            if (e.target.closest('#reportUserBtn')) {
                e.preventDefault();
                if (reportModalInstance) {
                    reportModalInstance.show();
                }
            }
        });

        // Cancel report
        const cancelBtn = document.getElementById('reportCancelBtn');
        if (cancelBtn) {
            cancelBtn.addEventListener('click', function() {
                if (reportModalInstance) {
                    reportModalInstance.hide();
                }
            });
        }

        // Submit report
        const confirmBtn = document.getElementById('reportConfirmBtn');
        if (confirmBtn) {
            confirmBtn.addEventListener('click', function() {
                // Your report submission logic here
                console.log("Report submitted");
                alert("Report submitted successfully.");
                
                // Close modal
                if (reportModalInstance) {
                    reportModalInstance.hide();
                }
            });
        }

        // Emergency cleanup for any modal issues
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                forceCleanup();
            }
        });

        // Prevent modal backdrop from blocking interactions
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal-backdrop')) {
                forceCleanup();
            }
        });
    }

    // Emergency cleanup function
    function forceCleanup() {
        console.log('Performing emergency cleanup...');
        
        // Remove all backdrops
        const backdrops = document.querySelectorAll('.modal-backdrop');
        backdrops.forEach(backdrop => {
            backdrop.remove();
        });
        
        // Hide all modals
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            modal.style.display = 'none';
            modal.classList.remove('show');
        });
        
        // Reset body
        document.body.classList.remove('modal-open');
        document.body.style.overflow = '';
        document.body.style.paddingRight = '';
        
        console.log('Cleanup completed');
    }

    // Auto-cleanup when modals are hidden
    document.addEventListener('hidden.bs.modal', function(e) {
        // Small delay to ensure Bootstrap completes its cleanup
        setTimeout(() => {
            const backdrops = document.querySelectorAll('.modal-backdrop');
            if (backdrops.length > 0) {
                console.log('Found lingering backdrops, cleaning up...');
                forceCleanup();
            }
        }, 50);
    });

})();
</script>