@model PicklePlay.Models.Schedule
@using PicklePlay.Models

<div class="col">
    <div class="card h-100 shadow-sm competition-card" 
         onclick="location.href='@Url.Action("CompDetails", "Competition", new { id = Model.ScheduleId })'">
        
        @if (!string.IsNullOrEmpty(Model.CompetitionImageUrl))
        {
            <img src="@Url.Content(Model.CompetitionImageUrl)" class="card-img-top" alt="@Model.GameName Poster" style="height: 200px; object-fit: cover;">
        }
        else
        {
            <div class="card-img-top" style="height: 200px; background-color: #495057; display: flex; align-items: center; justify-content: center; color: white; font-weight: 500; font-size: 1.2rem;">
                <span>No Poster</span>
            </div>
        }
        
        <div class="card-body">
            <h5 class="card-title">@Model.GameName</h5>
            
            @if(Model.Status == ScheduleStatus.PendingSetup)
            {
                <span class="badge bg-warning text-dark mb-2">Pending Setup</span>
            }
            else if (Model.Status == ScheduleStatus.InProgress)
            {
                <span class="badge bg-primary mb-2">In Progress</span>
            }
            else if (Model.Status == ScheduleStatus.Completed)
            {
                <span class="badge bg-secondary mb-2">Completed</span>
            }
            else
            {
                <span class="badge bg-success mb-2">@Model.Status?.ToString()</span>
            }

            <p class="card-text mb-1 small"><i class="bi bi-geo-alt-fill me-1"></i> @Model.Location</p>
            <p class="card-text mb-1 small">
                <i class="bi bi-calendar-event me-1"></i>
                @Model.StartTime?.ToString("MMM d") - @Model.EndTime?.ToString("MMM d, yyyy")
            </p>
            <p class="card-text small"><i class="bi bi-trophy-fill me-1"></i> @Model.NumTeam Teams</p>
        </div>
        <div class="card-footer bg-white border-top-0 pb-3">
            <small class="text-danger">Registration Closes: @Model.RegClose?.ToString("MMM d")</small>
        </div>
    </div>
</div>