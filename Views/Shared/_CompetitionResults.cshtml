@model List<PicklePlay.Models.Schedule>

@if (Model != null && Model.Any())
{
    foreach (var competition in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="result-card">
                <div class="d-flex align-items-start">
                    <div class="competition-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4>@competition.GameName</h4>
                                <p class="text-muted mb-2">@competition.Description</p>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold text-warning mb-2">RM@(competition.FeeAmount ?? 0)</div>
                                <small class="text-muted">@competition.StartTime?.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                        <div class="d-flex flex-wrap mb-3">
                            <span class="stats-badge"><i class="fas fa-map-marker-alt me-1"></i>@competition.Location</span>
                            <span class="stats-badge"><i class="fas fa-users me-1"></i>@competition.NumPlayer Players</span>
                            <span class="stats-badge"><i class="fas fa-trophy me-1"></i>Competition</span>
                        </div>
                        <div class="action-buttons">
                            <a href="@Url.Action("CompDetails", "Competition", new { id = competition.ScheduleId })" class="btn btn-custom">
                                <i class="fas fa-eye me-1"></i>View Details
                            </a>
                             <a href="@Url.Action("CompDetails", "Competition", new { id = competition.ScheduleId })" class="btn btn-outline-custom">
                                <i class="fas fa-edit me-1"></i>Register Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="empty-state">
            <i class="fas fa-trophy text-muted"></i>
            <h4>No competitions found</h4>
            <p class="text-muted">Try adjusting your search criteria</p>
        </div>
    </div>
}