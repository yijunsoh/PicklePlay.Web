@model IEnumerable<PicklePlay.Models.Schedule>
@using PicklePlay.Models

@{
    ViewData["Title"] = "Chat";       
}

<div class="container mt-4">
    <h2>Chat</h2>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="chatTabs">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#friends">Friends</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#community">Community Chat</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#games">Game/Competition Chat</a>
        </li>
    </ul>

    <div class="tab-content mt-3">

        <!-- Friend Tab -->
        <div class="tab-pane fade show active" id="friends">
            <div class="row">
                <!-- Friend List -->
                <div class="col-md-3 border-end">
                    <h5>Friends</h5>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            John Lee
                            <button class="btn btn-sm btn-outline-primary">Chat</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Amir Rahman
                            <button class="btn btn-sm btn-outline-primary">Chat</button>
                        </li>
                    </ul>

                    <h6 class="mt-4">Friend Requests</h6>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Sophia Lim
                            <div>
                                <button class="btn btn-sm btn-success me-1">Accept</button>
                                <button class="btn btn-sm btn-danger">Decline</button>
                            </div>
                        </li>
                    </ul>
                </div>

                <!-- Chat Window -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">Chat with John Lee</div>
                        <div class="card-body" style="height:300px; overflow-y:auto;">
                            <p><strong>You:</strong> Hi John! Want to join a game?</p>
                            <p><strong>John:</strong> Sure, letâ€™s play tomorrow!</p>
                        </div>
                        <div class="card-footer d-flex">
                            <input type="text" class="form-control me-2" placeholder="Type a message..."/>
                            <button class="btn btn-primary">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Community Tab -->
        <div class="tab-pane fade" id="community">
            <h5>Community Chat Rooms</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    City Pickleballers <button class="btn btn-sm btn-outline-primary float-end">Enter</button>
                </li>
                <li class="list-group-item">
                    Riverside Pickleball Club <button class="btn btn-sm btn-outline-primary float-end">Enter</button>
                </li>
            </ul>
        </div>

        <!-- Game Tab -->
        <div class="tab-pane fade" id="games">
            <h5>My Game/Competition Chats</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    Morning Social Doubles <button class="btn btn-sm btn-outline-primary float-end">Enter</button>
                </li>
                <li class="list-group-item">
                    Weekend Night Social <button class="btn btn-sm btn-outline-primary float-end">Enter</button>
                </li>
            </ul>
        </div>
    </div>
</div>
