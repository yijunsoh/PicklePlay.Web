@model Schedule
@using PicklePlay.Models
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = Model.GameName ?? "Game Details";

    // --- 1. SETUP BLOCK ---
    var currentUserId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    var currentUserParticipation = Model.Participants.FirstOrDefault(p => p.UserId == currentUserId && p.Role == ParticipantRole.Player);

    // --- Requirement 1: Check if any restrictions exist ---
    bool hasRestrictions = Model.AgeGroupRestriction != AgeGroupRestriction.None ||
                           Model.GenderRestriction != GenderRestriction.None ||
                           Model.MinRankRestriction.HasValue ||
                           Model.MaxRankRestriction.HasValue ||
                           Model.CancellationFreeze != CancellationFreeze.None;

    // --- Requirement 2: Prepare participant lists ---
    var organizers = Model.Participants.Where(p => p.Role == ParticipantRole.Organizer).ToList();
    var confirmedPlayers = Model.Participants.Where(p => p.Role == ParticipantRole.Player && p.Status == ParticipantStatus.Confirmed).ToList();
    var onHoldPlayers = Model.Participants.Where(p => p.Role == ParticipantRole.Player && p.Status == ParticipantStatus.OnHold).ToList();
    var pendingPaymentPlayers = Model.Participants.Where(p => p.Role == ParticipantRole.Player && p.Status == ParticipantStatus.PendingPayment).ToList();


    // --- Requirement 3: Prepare player slot visuals ---
    int maxPlayers = Model.NumPlayer ?? 0;
    int emptySlots = 0;

    if (maxPlayers > 0)
    {
        emptySlots = maxPlayers - confirmedPlayers.Count;
        if (emptySlots < 0) emptySlots = 0; // Safety check
    }

     // *** Get bookmark status from ViewBag (set in ScheduleController) ***
    bool isBookmarked = ViewBag.IsBookmarked ?? false;
}

<style>
    /* ... Your existing styles ... */
    .participant-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(65px, 1fr));
        gap: 15px;
    }

    .player-slot, .empty-slot {
        width: 65px;
        height: 65px;
        border-radius: 50%;
        background-color: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
    }

    .player-slot img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #198754;
    }
    
    .player-slot .player-name {
        display: block;
        font-size: 0.75rem;
        margin-top: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 65px;
    }
    
    .player-slot-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 10px;
    }

    .empty-slot {
        border: 2px dashed #ced4da;
    }

    .empty-slot i {
        font-size: 1.5rem;
        color: #ced4da;
    }
    
    .organizer-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80px;
        margin-right: 15px;
        margin-bottom: 10px;
    }
    
    .organizer-item img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #0d6efd;
    }
    
    .organizer-item .player-name {
        font-size: 0.8rem;
        margin-top: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 80px;
        text-align: center;
    }

    .toggle-icon {
        transition: transform 0.2s ease-in-out;
        display: inline-block;
    }

    .toggle-icon.rotated {
        transform: rotate(180deg);
    }

    .bookmark-icon.bi-bookmark-fill {
        color: #0d6efd;
    }
    .bookmark-icon:hover {
        opacity: 0.7;
    }
</style>

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <h2 class="mb-0 me-3">@Model.GameName</h2>
                    @if(Model.EventTag.HasValue && Model.EventTag != EventTag.None) 
                    {
                        <span class="badge bg-primary fs-6">@Model.EventTag.ToString()</span>
                    }
                </div>
               
                <div>
                    <!-- *** FIX: Added 'text-decoration-none' to remove the underline *** -->
                    <a href="#" class="text-secondary me-2 fs-4 text-decoration-none" 
                       id="bookmark-toggle" 
                       data-schedule-id="@Model.ScheduleId"
                       title="@(isBookmarked ? "Remove bookmark" : "Add bookmark")">
                        
                        <i class="bookmark-icon bi @(isBookmarked ? "bi-bookmark-fill" : "bi-bookmark")"></i>
                    </a>
    
                    @if (organizers.Any(o => o.UserId == currentUserId))
                    {
                        <div class="dropdown d-inline-block">
                            <a href="#" class="text-secondary fs-4" id="settingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsDropdown">
                                <li>
                                    <a class="dropdown-item" asp-action="Edit" asp-controller="Schedule" asp-route-id="@Model.ScheduleId">
                                        <i class="bi bi-pencil-square me-2"></i>Edit
                                    </a>
                                </li>
                                <li>
                                    <!-- Changed this to a simple link to the GET Delete page for safety -->
                                    <a class="dropdown-item text-danger" asp-action="Delete" asp-controller="Schedule" asp-route-id="@Model.ScheduleId">
                                        <i class="bi bi-trash me-2"></i>Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <hr />

            <p>@Model.Description</p>

            <hr />
            <h4>Participants</h4>

            <h5 class="mt-3"><i class="bi bi-person-check-fill text-primary"></i> Organizer</h5>
            @if (organizers.Any())
            {
                <div class="d-flex flex-wrap align-items-center mt-3">
                    @foreach (var p in organizers)
                    {
                        <div class="organizer-item" data-bs-toggle="tooltip" data-bs-placement="top" title="@p.User?.Username">
                            <img src="@(string.IsNullOrEmpty(p.User?.ProfilePicture) ? "/images/profile_image.jpg" : p.User.ProfilePicture)" alt="Profile"/>
                            <span class="player-name">@p.User?.Username</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No organizer listed.</p>
            }

            <h5 class="mt-4">
                <i class="bi bi-people-fill text-success"></i> Confirmed 
                @if (maxPlayers > 0)
                {
                    <span>(@confirmedPlayers.Count() / @maxPlayers)</span>
                }
                else
                {
                    <span>(@confirmedPlayers.Count())</span>
                }
            </h5>
            <div class="participant-grid mt-3">
                @foreach (var p in confirmedPlayers)
                {
                    <div class="player-slot-wrapper" data-bs-toggle="tooltip" data-bs-placement="top" title="@p.User?.Username">
                        <div class="player-slot">
                            <img src="@(string.IsNullOrEmpty(p.User?.ProfilePicture) ? "/images/profile_image.jpg" : p.User?.ProfilePicture)" alt="Profile"/>
                        </div>
                        <span class="player-name">@p.User?.Username</span>
                    </div>
                }

                @if (maxPlayers > 0)
                {
                    @for (int i = 0; i < emptySlots; i++)
                    {
                        <div class="player-slot-wrapper">
                            <div class="empty-slot">
                                <i class="bi bi-person-plus"></i>
                            </div>
                            <span class="player-name text-muted">Empty</span>
                        </div>
                    }
                }
            </div>

            @if (pendingPaymentPlayers.Any())
            {
                <h5 class="mt-4"><i class="bi bi-credit-card text-info"></i> Pending Payment (@pendingPaymentPlayers.Count())</h5>
                <div class="d-flex flex-wrap align-items-center mt-3">
                    @foreach (var p in pendingPaymentPlayers)
                    {
                        <div class="organizer-item" data-bs-toggle="tooltip" data-bs-placement="top" title="@p.User?.Username">
                            <img src="@(string.IsNullOrEmpty(p.User?.ProfilePicture) ? "/images/profile_image.jpg" : p.User.ProfilePicture)" alt="Profile"/>
                            <span class="player-name">@p.User?.Username</span>
                        </div>
                    }
                </div>
            }

            @if (onHoldPlayers.Any())
            {
                <h5 class="mt-4"><i class="bi bi-person-fill-exclamation text-warning"></i> On Hold (@onHoldPlayers.Count())</h5>
                <div class="d-flex flex-wrap align-items-center mt-3">
                    @foreach (var p in onHoldPlayers)
                    {
                        <div class="organizer-item" data-bs-toggle="tooltip" data-bs-placement="top" title="@p.User?.Username">
                            <img src="@(string.IsNullOrEmpty(p.User?.ProfilePicture) ? "/images/profile_image.jpg" : p.User.ProfilePicture)" alt="Profile"/>
                            <span class="player-name">@p.User?.Username</span>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p>
                        <i class="bi bi-calendar-event"></i>
                        <strong>When:</strong>
                        <span>@Model.StartTime?.ToString("ddd, dd MMM yyyy")</span>
                    </p>

                    <p>
                        <i class="bi bi-clock"></i>
                        <strong>Time:</strong>
                        <span>@Model.StartTime?.ToString("h:mm tt") - @Model.EndTime?.ToString("h:mm tt")</span>
                        @if (Model.Duration.HasValue)
                        {
                            <span class="text-muted small"> (@ScheduleHelper.GetFriendlyDuration(Model.Duration.Value))</span> 
                        }
                    </p>

                    <p>
                        <i class="bi bi-geo-alt"></i>
                        <strong>Where:</strong>
                        <span>@Model.Location</span>
                    </p>
                    
                    <hr />

                    <p>
                        <i class="bi bi-cash-coin"></i>
                        <strong>Fee:</strong>
                        @if(Model.FeeType == FeeType.Free || Model.FeeType == FeeType.None)
                        {
                            <span>Free</span>
                        }
                        else if (Model.FeeType == FeeType.PerPerson)
                        {
                            <span>RM @Model.FeeAmount?.ToString("0.00") per person</span>
                        }
                        else if (Model.FeeType == FeeType.AutoSplitTotal)
                        {
                             <span>RM @Model.FeeAmount?.ToString("0.00") (Total)</span>
                        }
                    </p>
                    
                    <div class="d-grid gap-2 mt-4">
                        @if (currentUserParticipation == null && currentUserId.HasValue && 
                             !(organizers.Any(o => o.UserId == currentUserId) && Model.HostRole == HostRole.HostOnly))
                        {
                            <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#joinGameModal">
                                <i class="bi bi-person-plus-fill"></i> Join Game
                            </button>
                        }
                        else if (currentUserParticipation?.Status == ParticipantStatus.OnHold)
                        {
                            <form asp-controller="Community" asp-action="CancelJoin" method="post" class="d-grid">
                                @Html.AntiForgeryToken() <!-- *** FIX: Added Token *** -->
                                <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />
                                <button type="submit" class="btn btn-outline-danger btn-lg">
                                    <i class="bi bi-x-circle"></i> Cancel Join
                                </button>
                            </form>
                            <small class="text-muted text-center">Pending approval</small>
                        }
                        else if (currentUserParticipation?.Status == ParticipantStatus.PendingPayment)
                        {
                            <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#paymentModal">
                                <i class="bi bi-credit-card-fill"></i> Make Payment
                            </button>
                            <form asp-controller="Community" asp-action="CancelJoin" method="post" class="d-grid mt-2">
                                @Html.AntiForgeryToken() <!-- *** FIX: Added Token *** -->
                                <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Cancel Spot
                                </button>
                            </form>
                            <small class="text-muted text-center">Your spot is reserved. Please complete payment.</small>
                        }
                        else if (currentUserParticipation?.Status == ParticipantStatus.Confirmed)
                        {
                            <button type="button" class="btn btn-success btn-lg" disabled>
                                <i class="bi bi-check-circle-fill"></i> Joined
                            </button>
                            
                            <form asp-controller="Community" asp-action="CancelJoin" method="post" class="d-grid mt-2" onsubmit="return confirm('Are you sure you want to leave this game?');">
                                @Html.AntiForgeryToken() <!-- *** FIX: Added Token *** -->
                                <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-box-arrow-left"></i> Leave Game
                                </button>
                            </form>
                        }
                        
                        @if (currentUserParticipation == null && 
                             organizers.Any(o => o.UserId == currentUserId) &&
                             Model.HostRole == HostRole.HostOnly)
                        {
                             <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#joinGameModal">
                                <i class="bi bi-person-plus-fill"></i> Host and Play
                            </button>
                        }
                        
                        @if (!currentUserId.HasValue)
                        {
                             <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-success btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Log in to Join
                            </a>
                        }

                        <a href="#" class="btn btn-outline-secondary">Contact Host</a>
                    </div>
                </div>
            </div>

            @if (hasRestrictions)
            {
                <div class="card shadow-sm mt-3">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center mb-0"
                            data-bs-toggle="collapse"
                            data-bs-target="#restrictionsCollapse"
                            aria-expanded="false"
                            aria-controls="restrictionsCollapse"
                            style="cursor: pointer;">

                            <span>Restrictions</span>
                            <a class="text-decoration-none text-secondary">
                                <span class="toggle-icon small">â–¼</span>
                            </a>
                        </h5>

                        <div class="collapse" id="restrictionsCollapse">
                            <hr />
                            <dl class="row mt-3 mb-0">
                                @if (Model.AgeGroupRestriction != AgeGroupRestriction.None)
                                {
                                    <dt class = "col-sm-4"><i class="bi bi-person-badge me-1"></i> Age</dt>
                                    <dd class = "col-sm-8">@Model.AgeGroupRestriction.ToString()</dd>
                                }
                                @if (Model.GenderRestriction != GenderRestriction.None)
                                {
                                    <dt class = "col-sm-4"><i class="bi bi-gender-ambiguous me-1"></i> Gender</dt>
                                    <dd class = "col-sm-8">@Model.GenderRestriction.ToString()</dd>
                                }
                                @if (Model.MinRankRestriction.HasValue || Model.MaxRankRestriction.HasValue)
                                {
                                    <dt class = "col-sm-4"><i class="bi bi-bar-chart-line me-1"></i> Skill</dt>
                                    <dd class = "col-sm-8">
                                        @(Model.MinRankRestriction.HasValue ? Model.MinRankRestriction.Value.ToString("0.0") : "Any")
                                        -
                                        @(Model.MaxRankRestriction.HasValue ? Model.MaxRankRestriction.Value.ToString("0.0") : "Any")
                                    </dd>
                                }
                                @if (Model.CancellationFreeze != CancellationFreeze.None)
                                {
                                    <dt class = "col-sm-4"><i class="bi bi-calendar-x me-1"></i> Cancel</dt>
                                    <dd class = "col-sm-8">@Model.CancellationFreeze.ToString()</dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<div class="modal fade" id="joinGameModal" tabindex="-1" aria-labelledby="joinGameModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="joinGameModalLabel">Join Game</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                How would you like to join?
            </div>
            <div class="modal-footer d-flex justify-content-center">
                
                <form asp-controller="Community" asp-action="JoinIndividually" method="post" class="me-2">
                    @Html.AntiForgeryToken() <!-- *** FIX: Added Token *** -->
                    <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />
                    <button type="submit" class="btn btn-primary">Join Individually</button>
                </form>

                <button type="button" class="btn btn-info" disabled>Join as Team</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="paymentModalLabel">Make Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Please complete your payment to confirm your spot.</p>
                <p><strong>Fee:</strong> RM @Model.FeeAmount?.ToString("0.00")</p>
                <div class="alert alert-info">
                    <i class="bi bi-tools"></i> Payment gateway integration is pending.
                </div>
                <p>Once the payment system is connected, this button will link to the payment provider.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <button type="button" class="btn btn-primary" disabled>Pay Now (Not Implemented)</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // Your existing tooltip script
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Your existing icon rotation script
        var collapseElement = document.getElementById('restrictionsCollapse');
        var triggerElement = document.querySelector('[data-bs-target="#restrictionsCollapse"]');
        
        if (collapseElement && triggerElement) {
            var icon = triggerElement.querySelector('.toggle-icon');

            if (icon) {
                collapseElement.addEventListener('show.bs.collapse', function () {
                    icon.classList.add('rotated');
                });
                
                collapseElement.addEventListener('hide.bs.collapse', function () {
                    icon.classList.remove('rotated');
                });
            }
        }

        // *** FIX: Added Bookmark Toggle Script Back ***
        document.getElementById('bookmark-toggle').addEventListener('click', function(e) {
            e.preventDefault(); 

            var button = this;
            var scheduleId = button.dataset.scheduleId;
            var icon = button.querySelector('.bookmark-icon');
            
            // Find the token from one of the forms on the page
            var tokenInput = document.querySelector('form input[name="__RequestVerificationToken"]');
            var token = tokenInput ? tokenInput.value : ''; 

            if (!token) {
                console.error('Anti-forgery token not found!');
                alert('An error occurred. Please refresh the page and try again.');
                return;
            }

            fetch('/Bookmark/ToggleBookmark', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token // Send the token
                },
                body: 'scheduleId=' + scheduleId
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.isBookmarked) {
                    icon.classList.remove('bi-bookmark');
                    icon.classList.add('bi-bookmark-fill');
                    button.setAttribute('title', 'Remove bookmark');
                } else {
                    icon.classList.remove('bi-bookmark-fill');
                    icon.classList.add('bi-bookmark');
                    button.setAttribute('title', 'Add bookmark');
                }
            })
            .catch(error => {
                console.error('Error toggling bookmark:', error);
                alert('An error occurred. Please try again.');
            });
        });
    </script>
}

