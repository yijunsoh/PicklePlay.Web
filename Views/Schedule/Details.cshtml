@model Schedule
@using PicklePlay.Models
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = Model.GameName ?? "Game Details";

    // --- 1. SETUP BLOCK ---
    // Get current user's ID from session
    var currentUserId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    
    // Find the current user's participation status
    // *** MODIFICATION ***: Check for player role specifically
    var currentUserParticipation = Model.Participants.FirstOrDefault(p => p.UserId == currentUserId && p.Role == ParticipantRole.Player);

    // --- Requirement 1: Check if any restrictions exist ---
    bool hasRestrictions = Model.AgeGroupRestriction != AgeGroupRestriction.None ||
                           Model.GenderRestriction != GenderRestriction.None ||
                           Model.MinRankRestriction.HasValue ||
                           Model.MaxRankRestriction.HasValue ||
                           Model.CancellationFreeze != CancellationFreeze.None;

    // --- Requirement 2: Prepare participant lists ---
    var organizers = Model.Participants.Where(p => p.Role == ParticipantRole.Organizer).ToList();
    var confirmedPlayers = Model.Participants.Where(p => p.Role == ParticipantRole.Player && p.Status == ParticipantStatus.Confirmed).ToList();
    var onHoldPlayers = Model.Participants.Where(p => p.Role == ParticipantRole.Player && p.Status == ParticipantStatus.OnHold).ToList();
    // *** NEW ***
    var pendingPaymentPlayers = Model.Participants.Where(p => p.Role == ParticipantRole.Player && p.Status == ParticipantStatus.PendingPayment).ToList();


    // --- Requirement 3: Prepare player slot visuals ---
    int maxPlayers = Model.NumPlayer ?? 0;
    int emptySlots = 0;

if (maxPlayers > 0)
{
    emptySlots = maxPlayers - confirmedPlayers.Count;
    if (emptySlots < 0) emptySlots = 0; // Safety check
}
}

<style>
    .participant-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(65px, 1fr));
        gap: 15px;
    }

    .player-slot, .empty-slot {
        width: 65px;
        height: 65px;
        border-radius: 50%;
        background-color: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
    }

    .player-slot img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #198754; /* Green border for confirmed */
    }
    
    .player-slot .player-name {
        display: block;
        font-size: 0.75rem;
        margin-top: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 65px;
    }
    
    .player-slot-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 10px;
    }

    .empty-slot {
        border: 2px dashed #ced4da;
    }

    .empty-slot i {
        font-size: 1.5rem;
        color: #ced4da;
    }
    
    .organizer-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80px;
        margin-right: 15px;
        margin-bottom: 10px;
    }
    
    .organizer-item img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #0d6efd; /* Blue border for organizer */
    }
    
    .organizer-item .player-name {
        font-size: 0.8rem;
        margin-top: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 80px;
        text-align: center;
    }

    .toggle-icon {
    transition: transform 0.2s ease-in-out;
    display: inline-block; /* Ensures the transform works */
}

.toggle-icon.rotated {
    transform: rotate(180deg);
}
</style>

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

