@model PicklePlay.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password - PicklePlay";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@section Styles {
    <style>
        body {
            background: url("/images/pickleball_background.jpg") no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .reset-password-container {
            max-width: 900px;
            width: 100%;
        }
        .reset-password-card {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .reset-password-left {
            background-color: #A1D336;
            color: white;
            padding: 50px 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .reset-password-left img {
            max-width: 120px;
            margin-bottom: 20px;
        }
        .reset-password-right {
            padding: 50px 30px;
            background: white;
        }
        .btn-reset {
            background-color: #A1D336;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
        .btn-reset:hover {
            background-color: #8fbd2e;
            color: white;
        }
        .btn-login {
            background-color: #A1D336;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            width: 100%;
        }
        .btn-login:hover {
            background-color: #8fbd2e;
            color: white;
        }
        .form-control:focus {
            border-color: #A1D336;
            box-shadow: 0 0 0 0.2rem rgba(161, 211, 54, 0.25);
        }
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }
    </style>
}

<div class="container reset-password-container">
    <div class="card reset-password-card">
        <div class="row g-0">
            <!-- Left Panel -->
            <div class="col-md-6 reset-password-left text-center">
                <img src="~/images/logoV3.png" alt="Logo">
                <h2>Create New Password</h2>
                <p>Enter your new password below to reset your account.</p>
            </div>

            <!-- Right Panel -->
            <div class="col-md-6 reset-password-right">
                <h3 class="mb-4">Reset Password</h3>

                <!-- Success Message -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        
                        <!-- Login Button after successful password reset -->
                        <div class="mt-3">
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-login">
                                Proceed to Login
                            </a>
                        </div>
                    </div>
                }

                <!-- Display error messages -->
                @if (ViewData.ModelState.ContainsKey("") && TempData["SuccessMessage"] == null)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true, "")
                    </div>
                }

                <!-- Only show form if no success message -->
                @if (TempData["SuccessMessage"] == null)
                {
                    <form asp-controller="Auth" asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Token" />
                        
                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" asp-for="NewPassword" placeholder="Enter new password" required>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        
                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm new password" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <!-- Submit -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-reset">Reset Password</button>
                        </div>

                        <!-- Back to login -->
                        <div class="text-center">
                            <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">Back to Login</a>
                        </div>
                    </form>
                }
                else
                {
                    <!-- Additional back to login link for success case -->
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">Back to Login</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}