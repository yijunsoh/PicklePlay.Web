</div>

@* === MAIN CONTENT === *@
<div class="container main-content-admin">
    <div class="row">
        
        @* === LEFT COLUMN: Stats, Settings, Announcements (4/12) === *@
        <div class="col-lg-4">
            
            @* === Community Statistics === *@
            <div class="section-card">
