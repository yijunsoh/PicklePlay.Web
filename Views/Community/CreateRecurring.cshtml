@model ScheduleRecurringViewModel
@using PicklePlay.Models
@{
    ViewData["Title"] = "Create Recurring Schedule";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Create Recurring Schedule</h3>
        <button type="button" class="btn btn-outline-secondary" onclick="confirmExit()">Back</button>
    </div>

    <form asp-action="CreateRecurring" method="post">
        @Html.AntiForgeryToken()
        
        @* --- ADD COMMUNITY ID HIDDEN FIELD --- *@
        @if (ViewData["CurrentCommunityId"] != null)
        {
            <input type="hidden" name="CommunityId" value="@ViewData["CurrentCommunityId"]" />
        }
        
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="RecurringWeek" class="form-label"></label>
            <div>
                @* Loop through all enum values *except* 'None' *@
                @foreach (var day in Enum.GetValues<RecurringWeek>().Where(d => d != RecurringWeek.None))
                {
                    <div class="form-check form-check-inline">
                        @* The 'name' must match the ViewModel property 'RecurringWeek' *@
                        <input class="form-check-input" type="checkbox" name="RecurringWeek" id="day-@day" value="@day">
                        <label class="form-check-label" for="day-@day">@day</label>
                    </div>
                }
            </div>
            <span asp-validation-for="RecurringWeek" class="text-danger"></span>
        </div>

        <h5 class="mt-4">Game Info</h5>
        <div class="mb-3">
            <label asp-for="GameName" class="form-label"></label>
            <input asp-for="GameName" type="text" maxlength="100" class="form-control"/>
            <span asp-validation-for="GameName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <hr />

        <div class="mb-3">
            <label asp-for="EventTag" class="form-label"></label>
            <select asp-for="EventTag" class="form-select" asp-items="Html.GetEnumSelectList<EventTag>()"></select>
            <span asp-validation-for="EventTag" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="StartTime" class="form-label"></label>
                <input asp-for="StartTime" type="time" class="form-control"/>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                    @* --- NEW FIELD --- *@
                    <div class="mb-3">
                        <label asp-for="RecurringEndDate" class="form-label"></label>
                        <input asp-for="RecurringEndDate" class="form-control" type="date" />
                        <span asp-validation-for="RecurringEndDate" class="text-danger"></span>
                    </div>
                </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Duration" class="form-label"></label>
                <select asp-for="Duration" class="form-select" asp-items="Html.GetEnumSelectList<Duration>()"></select>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label"></label>
            <input asp-for="Location" type="text" class="form-control"/>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AutoCreateWhen" class="form-label"></label>
            <select asp-for="AutoCreateWhen" class="form-select" asp-items="Html.GetEnumSelectList<AutoCreateWhen>()"></select>
            <span asp-validation-for="AutoCreateWhen" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NumPlayer" class="form-label"></label>
                <input asp-for="NumPlayer" type="number" class="form-control" min="0" step="1" />
                <span asp-validation-for="NumPlayer" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Privacy" class="form-label"></label>
                <select asp-for="Privacy" class="form-select" asp-items="Html.GetEnumSelectList<Privacy>()"></select>
                <span asp-validation-for="Privacy" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="FeeType" class="form-label"></label>
            <select asp-for="FeeType" class="form-select" id="feeSelect" onchange="toggleFeeInput()" asp-items="Html.GetEnumSelectList<FeeType>()"></select>
            <span asp-validation-for="FeeType" class="text-danger"></span>
            
            <div id="feeInput" class="mt-2" style="display:none;">
                <label asp-for="FeeAmount" class="form-label"></label>
                <input asp-for="FeeAmount" type="number" class="form-control" placeholder="Enter price (RM)" step="0.01" min="0" />
                <span asp-validation-for="FeeAmount" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="GameFeature" class="form-label"></label>
            <select asp-for="GameFeature" class="form-select" asp-items="Html.GetEnumSelectList<GameFeature>()"></select>
            <span asp-validation-for="GameFeature" class="text-danger"></span>
        </div>

        <h5 class="mt-4">Restrictions</h5>
        <div class="row">
           <div class="col-md-6">
        
        <div class="mb-3">
            <label asp-for="MinRankRestriction" class="form-label"></label>
            <input asp-for="MinRankRestriction" type="number" class="form-control" step="0.10" value="0.00" min="0" />
            <span asp-validation-for="MinRankRestriction" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        
        <div class="mb-3">
            <label asp-for="MaxRankRestriction" class="form-label"></label>
            <input asp-for="MaxRankRestriction" type="number" class="form-control" step="0.10" value="3.00" min="0" />
            <span asp-validation-for="MaxRankRestriction" class="text-danger"></span>
        </div>
    </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="GenderRestriction" class="form-label"></label>
                <select asp-for="GenderRestriction" class="form-select" asp-items="Html.GetEnumSelectList<GenderRestriction>()"></select>
                <span asp-validation-for="GenderRestriction" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="AgeGroupRestriction" class="form-label"></label>
                <select asp-for="AgeGroupRestriction" class="form-select" asp-items="Html.GetEnumSelectList<AgeGroupRestriction>()"></select>
                <span asp-validation-for="AgeGroupRestriction" class="text-danger"></span>
            </div>
        </div>

        <h5 class="mt-4">Advanced Options</h5>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CancellationFreeze" class="form-label"></label>
                <select asp-for="CancellationFreeze" class="form-select" asp-items="Html.GetEnumSelectList<CancellationFreeze>()"></select>
                <span asp-validation-for="CancellationFreeze" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="HostRole" class="form-label"></label>
                <select asp-for="HostRole" class="form-select" asp-items="Html.GetEnumSelectList<HostRole>()"></select>
                <span asp-validation-for="HostRole" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-success w-100 py-2 mt-3">Create</button>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script>
function toggleFeeInput(){
    const feeSelect = document.getElementById("feeSelect");
    const feeInput = document.getElementById("feeInput");
    
    // === ITEM 2: JAVASCRIPT FIX ===
    // Check for the integer values, not the string names
    // 2 = AutoSplitTotal, 3 = PerPerson
    if(feeSelect.value === "2" || feeSelect.value === "3"){
        feeInput.style.display = "block";
    } else {
        feeInput.style.display = "none";
    }
}

// Ensure the fee input is shown/hidden on page load as well
document.addEventListener("DOMContentLoaded", function() {
    toggleFeeInput();
});
</script>

<script>
    function confirmExit() {
        if (confirm("Are you sure you want to exit? No draft will be saved.")) {
            window.location.href = '@Url.Action("Activity","Community")';
        }
    }
</script>

<script>
        document.addEventListener("DOMContentLoaded", function() {
            const now = new Date();
            // Format for datetime-local input (YYYY-MM-DDTHH:mm)
            const year = now.getFullYear();
            const month = (now.getMonth() + 1).toString().padStart(2, '0'); // Add 1 because months are 0-indexed
            const day = now.getDate().toString().padStart(2, '0');
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            
            const minDateTimeLocal = `${year}-${month}-${day}T${hours}:${minutes}`;
            const minTime = `${hours}:${minutes}`;

            // Find the datetime-local input (for CreateOneOff)
            const startTimeInputOneOff = document.getElementById("StartTime"); // Assuming default ID generated by asp-for
            if (startTimeInputOneOff && startTimeInputOneOff.type === 'datetime-local') {
                startTimeInputOneOff.min = minDateTimeLocal;
            }

            }
        });
    </script>

    <script>
        // UX: remove leading '-' typed/pasted into number inputs
        document.addEventListener('input', function(e) {
            const el = e.target;
            if (el.matches('input[type="number"]') && el.value && el.value.startsWith('-')) {
                el.value = el.value.replace('-', '');
            }
        });
        document.addEventListener('keydown', function(e) {
            if (e.key === '-' && e.target.matches('input[type="number"]')) e.preventDefault();
        });
    </script>
}